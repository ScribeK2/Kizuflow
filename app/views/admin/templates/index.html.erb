<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header Section -->
  <div class="mb-8 flex justify-between items-center animate-fade-in">
    <div>
      <h1 class="text-4xl md:text-5xl font-bold tracking-tight text-slate-800 dark:text-slate-100">
        Template Management
      </h1>
      <p class="mt-2 text-lg text-gray-600 dark:text-gray-400">
        Create, edit, and manage workflow templates.
      </p>
    </div>
    <div class="flex gap-2">
      <%= link_to admin_root_path, class: "bg-slate-600 hover:bg-slate-700 text-white px-4 py-2 rounded-lg text-sm font-medium shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800 inline-flex items-center" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Dashboard
      <% end %>
      <%= link_to new_admin_template_path, class: "bg-slate-600 hover:bg-slate-700 text-white px-4 py-2 rounded-lg text-sm font-medium shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800 inline-flex items-center" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        New Template
      <% end %>
    </div>
  </div>

  <!-- Templates List -->
  <% if @templates.any? %>
    <div class="solid-card overflow-hidden animate-fade-in-up">
      <div class="divide-y divide-white/20 dark:divide-gray-700/30">
        <% @templates.each_with_index do |template, index| %>
          <div class="px-6 py-5 hover:bg-white/10 dark:hover:bg-gray-800/10 transition-colors duration-200">
            <div class="flex items-center justify-between">
              <div class="flex-1 min-w-0">
                <div class="flex items-center gap-3 mb-2">
                  <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100"><%= template.name %></h3>
                  <% if template.is_public? %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300">
                      Public
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 dark:bg-gray-900/30 text-gray-800 dark:text-gray-300">
                      Private
                    </span>
                  <% end %>
                  <% if template.category.present? %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300">
                      <%= template.category %>
                    </span>
                  <% end %>
                </div>
                <% if template.description.present? %>
                  <p class="text-sm text-gray-600 dark:text-gray-400 mb-2"><%= truncate(template.description, length: 150) %></p>
                <% end %>
                <p class="text-xs text-gray-500 dark:text-gray-400">
                  <%= pluralize(template.workflow_data&.length || 0, "step") %> â€¢ Created <%= time_ago_in_words(template.created_at) %> ago
                </p>
              </div>
              <div class="flex items-center gap-2 ml-4">
                <%= link_to edit_admin_template_path(template), class: "px-4 py-2 text-sm font-medium text-blue-600 dark:text-blue-400 bg-blue-50/50 dark:bg-blue-900/20 rounded-lg hover:bg-blue-50/80 dark:hover:bg-blue-900/40 transition-all duration-200 hover:scale-105" do %>
                  Edit
                <% end %>
                <%= link_to admin_template_path(template), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this template?" }, class: "px-4 py-2 text-sm font-medium text-red-600 dark:text-red-400 bg-red-50/50 dark:bg-red-900/20 rounded-lg hover:bg-red-50/80 dark:hover:bg-red-900/40 transition-all duration-200 hover:scale-105" do %>
                  Delete
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="solid-card p-12 text-center animate-fade-in-up">
      <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
      </svg>
      <h3 class="mt-4 text-lg font-medium text-gray-900 dark:text-gray-100">No templates</h3>
      <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">Get started by creating a new template.</p>
      <div class="mt-6">
        <%= link_to new_admin_template_path, class: "inline-flex items-center px-4 py-2 bg-slate-600 hover:bg-slate-700 text-white rounded-lg text-sm font-medium shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          New Template
        <% end %>
      </div>
    </div>
  <% end %>
</div>

