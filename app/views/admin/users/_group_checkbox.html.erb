<div class="group-checkbox-item py-1.5" style="padding-left: <%= level * 1.5 %>rem;">
  <label class="flex items-start cursor-pointer group hover:bg-gray-100 dark:hover:bg-gray-700/30 rounded-lg px-3 py-2 -mx-3 transition-colors duration-150">
    <div class="relative flex items-center h-5 mt-0.5">
      <input type="checkbox" 
             name="group_ids[]" 
             value="<%= group.id %>"
             <%= 'checked' if user && user.groups.include?(group) %>
             class="sr-only peer">
      <div class="w-5 h-5 border-2 border-gray-400 dark:border-gray-600 rounded-md bg-white dark:bg-gray-800 peer-checked:bg-slate-600 peer-checked:border-transparent peer-focus:ring-2 peer-focus:ring-blue-500 peer-focus:ring-offset-2 dark:peer-focus:ring-offset-gray-800 transition-all duration-200 flex items-center justify-center shadow-sm">
        <svg class="w-3 h-3 text-white opacity-0 peer-checked:opacity-100 transition-opacity duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
        </svg>
      </div>
    </div>
    <div class="ml-3 flex-1 min-w-0">
      <div class="flex items-center gap-2">
        <% if level > 0 %>
          <svg class="w-4 h-4 text-gray-500 dark:text-gray-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        <% end %>
        <span class="text-sm font-semibold text-gray-900 dark:text-gray-100 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
          <%= group.name %>
        </span>
      </div>
      <% if group.description.present? %>
        <p class="mt-1 text-xs text-gray-600 dark:text-gray-400 line-clamp-2">
          <%= truncate(group.description, length: 60) %>
        </p>
      <% end %>
    </div>
  </label>
  
  <% if group.children.any? %>
    <div class="ml-4 mt-1 border-l-2 border-gray-300 dark:border-gray-700 pl-2">
      <% group.children.order(:position, :name).each do |child| %>
        <%= render partial: "admin/users/group_checkbox", locals: { group: child, user: user, level: level + 1 } %>
      <% end %>
    </div>
  <% end %>
</div>

