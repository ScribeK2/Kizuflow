<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header Section -->
  <div class="mb-8 flex justify-between items-center animate-fade-in">
    <div>
      <h1 class="text-4xl md:text-5xl font-bold tracking-tight bg-gradient-to-r from-blue-600 via-purple-600 to-blue-600 bg-clip-text text-transparent dark:from-blue-400 dark:via-purple-400 dark:to-blue-400">
        User Management
      </h1>
      <p class="mt-2 text-lg text-gray-600 dark:text-gray-400">
        Manage user roles, permissions, and group assignments across the system.
      </p>
    </div>
    <%= link_to admin_root_path, class: "bg-gradient-to-r from-gray-600 to-gray-700 hover:from-gray-700 hover:to-gray-800 text-white px-4 py-2 rounded-lg text-sm font-medium shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800 inline-flex items-center" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to Dashboard
    <% end %>
  </div>

  <!-- Users Table -->
  <div class="glass-card overflow-hidden animate-fade-in-up">
    <div class="px-6 py-5 border-b border-white/20 dark:border-gray-700/30 flex justify-between items-center">
      <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100 tracking-tight">All Users</h2>
      <button type="button" 
              onclick="if(bulkMode && document.querySelectorAll('.user-checkbox:checked').length > 0) { openBulkModal(); } else { toggleBulkMode(); }"
              id="bulk-toggle-btn"
              class="text-sm px-4 py-2 bg-gradient-to-r from-purple-600 to-purple-700 hover:from-purple-700 hover:to-purple-800 text-white rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800 font-medium inline-flex items-center"
              style="background: linear-gradient(to right, #9333ea, #7e22ce);">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        Bulk Assign Groups
      </button>
    </div>
    <% if @users.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-white/20 dark:divide-gray-700/30">
          <thead class="bg-white/10 dark:bg-gray-800/10">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider bulk-select-column" style="display: none;">
                <input type="checkbox" id="select-all-users" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" onchange="toggleAllUsers(this)">
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Email</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Role</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Groups</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Workflows</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Joined</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-white/20 dark:divide-gray-700/30">
            <% @users.each do |user| %>
              <tr class="hover:bg-white/10 dark:hover:bg-gray-800/10 transition-colors duration-200">
                <td class="px-6 py-4 whitespace-nowrap bulk-select-column" style="display: none;">
                  <input type="checkbox" name="user_ids[]" value="<%= user.id %>" class="user-checkbox h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900 dark:text-gray-100"><%= user.email %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= 
                    case user.role
                    when 'admin'
                      'bg-purple-100 dark:bg-purple-900/30 text-purple-800 dark:text-purple-300'
                    when 'editor'
                      'bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300'
                    else
                      'bg-gray-100 dark:bg-gray-900/30 text-gray-800 dark:text-gray-300'
                    end
                  %>">
                    <%= user.role.capitalize %>
                  </span>
                </td>
                <td class="px-6 py-4">
                  <div class="flex flex-wrap gap-1">
                    <% if user.groups.any? %>
                      <% user.groups.each do |group| %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-indigo-100 dark:bg-indigo-900/30 text-indigo-800 dark:text-indigo-300" title="<%= group.full_path %>">
                          <%= group.name %>
                        </span>
                      <% end %>
                    <% else %>
                      <span class="text-xs text-gray-400 dark:text-gray-500">None</span>
                    <% end %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                  <%= user.workflows.count %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                  <%= time_ago_in_words(user.created_at) %> ago
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <div class="flex items-center gap-2">
                    <%= form_with url: update_role_admin_user_path(user), method: :patch, local: true, class: "inline-flex items-center" do |form| %>
                      <%= form.select :role, options_for_select(User::ROLES.map { |r| [r.capitalize, r] }, user.role), {}, { class: "text-xs border border-gray-300 dark:border-gray-600 rounded-lg px-2 py-1 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100", onchange: "this.form.submit()" } %>
                    <% end %>
                    <button type="button" 
                            onclick="document.getElementById('group-modal-<%= user.id %>').classList.remove('hidden')"
                            class="text-xs px-3 py-1.5 bg-gradient-to-r from-purple-600 to-purple-700 hover:from-purple-700 hover:to-purple-800 text-white rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800 font-medium inline-flex items-center"
                            style="background: linear-gradient(to right, #9333ea, #7e22ce);"
                            title="Assign groups">
                      <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
                      </svg>
                      Groups
                    </button>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="px-6 py-12 text-center">
        <p class="text-gray-500 dark:text-gray-400">No users found</p>
      </div>
    <% end %>
  </div>
</div>

<%# Group Assignment Modals %>
<% @users.each do |user| %>
  <div id="group-modal-<%= user.id %>" 
       class="hidden fixed inset-0 z-50 overflow-y-auto"
       data-controller="modal">
    <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:block sm:p-0">
      <%# Backdrop %>
      <div class="fixed inset-0 bg-black/50 backdrop-blur-sm transition-opacity" 
           data-modal-target="backdrop"
           data-action="click->modal#backdropClick"></div>

      <%# Center modal %>
      <span class="hidden sm:inline-block sm:align-middle sm:h-screen">&#8203;</span>

      <%# Modal panel %>
      <div class="glass-modal inline-block align-bottom text-left overflow-hidden transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full animate-scale-in relative z-10"
           data-modal-target="content"
           data-action="click->modal#stop">
        <%= form_with url: update_groups_admin_user_path(user), method: :patch, local: true, class: "px-4 pt-5 pb-4 sm:p-6 sm:pb-4" do |form| %>
          <div class="flex items-center justify-between mb-6 pb-4 border-b border-gray-300 dark:border-gray-700/30">
            <div>
              <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100">Assign Groups</h3>
              <p class="mt-1 text-sm text-gray-700 dark:text-gray-400 font-medium"><%= user.email %></p>
            </div>
            <button type="button" 
                    onclick="document.getElementById('group-modal-<%= user.id %>').classList.add('hidden')"
                    class="text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 transition-colors duration-200 hover:scale-110 p-1 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700">
              <span class="sr-only">Close</span>
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>

          <div class="space-y-4">
            <p class="text-sm text-gray-700 dark:text-gray-400 leading-relaxed">
              Select groups to grant this user access to. Users will only see workflows in their assigned groups (unless they are admins).
            </p>
            
            <div class="max-h-80 overflow-y-auto border border-gray-300 dark:border-gray-700/30 rounded-lg p-4 bg-gray-50 dark:bg-gray-800/30 backdrop-blur-sm">
              <% if @all_groups.any? %>
                <div class="space-y-1">
                  <% @all_groups.roots.includes(:children).order(:position, :name).each do |root_group| %>
                    <%= render partial: "admin/users/group_checkbox", locals: { group: root_group, user: user, level: 0 } %>
                  <% end %>
                </div>
              <% else %>
                <div class="text-center py-8">
                  <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500 mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
                  </svg>
                  <p class="text-sm text-gray-500 dark:text-gray-400">No groups available. Create groups first.</p>
                </div>
              <% end %>
            </div>
          </div>

          <div class="mt-6 flex justify-end space-x-3 pt-4 border-t border-gray-300 dark:border-gray-700/30">
            <button type="button" 
                    onclick="document.getElementById('group-modal-<%= user.id %>').classList.add('hidden')"
                    class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800/50 hover:bg-gray-100 dark:hover:bg-gray-800/80 rounded-lg border border-gray-300 dark:border-gray-700/30 transition-all duration-200 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800 shadow-sm hover:shadow-md">
              Cancel
            </button>
            <%= form.submit "Save Groups", class: "px-4 py-2 text-sm font-medium text-white bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<%# Bulk Group Assignment Modal %>
<div id="bulk-group-modal" 
     class="hidden fixed inset-0 z-50 overflow-y-auto"
     data-controller="modal">
  <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:block sm:p-0">
    <%# Backdrop %>
    <div class="fixed inset-0 bg-black/50 backdrop-blur-sm transition-opacity" 
         data-modal-target="backdrop"
         data-action="click->modal#backdropClick"></div>

    <%# Center modal %>
    <span class="hidden sm:inline-block sm:align-middle sm:h-screen">&#8203;</span>

    <%# Modal panel %>
    <div class="glass-modal inline-block align-bottom text-left overflow-hidden transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full animate-scale-in relative z-10"
         data-modal-target="content"
         data-action="click->modal#stop">
      <%= form_with url: bulk_assign_groups_admin_users_path, method: :patch, local: true, class: "px-4 pt-5 pb-4 sm:p-6 sm:pb-4" do |form| %>
        <div class="flex items-center justify-between mb-6 pb-4 border-b border-gray-300 dark:border-gray-700/30">
          <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100">Bulk Assign Groups</h3>
          <button type="button" 
                  onclick="document.getElementById('bulk-group-modal').classList.add('hidden')"
                  class="text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 transition-colors duration-200 hover:scale-110 p-1 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700">
            <span class="sr-only">Close</span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <div class="space-y-4">
          <p class="text-sm text-gray-700 dark:text-gray-400 leading-relaxed">
            Select groups to assign to the selected users. This will replace their existing group assignments.
          </p>
          
          <div id="selected-users-count" class="text-sm font-medium text-blue-700 dark:text-blue-400 px-3 py-2 bg-blue-50 dark:bg-blue-900/20 rounded-lg border border-blue-200 dark:border-blue-800">
            No users selected
          </div>
          
          <div class="max-h-80 overflow-y-auto border border-gray-300 dark:border-gray-700/30 rounded-lg p-4 bg-gray-50 dark:bg-gray-800/30 backdrop-blur-sm">
            <% if @all_groups.any? %>
              <div class="space-y-1">
                <% @all_groups.roots.includes(:children).order(:position, :name).each do |root_group| %>
                  <%= render partial: "admin/users/group_checkbox", locals: { group: root_group, user: nil, level: 0 } %>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-8">
                <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500 mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
                </svg>
                <p class="text-sm text-gray-500 dark:text-gray-400">No groups available. Create groups first.</p>
              </div>
            <% end %>
          </div>
        </div>

        <div class="mt-6 flex justify-end space-x-3 pt-4 border-t border-gray-300 dark:border-gray-700/30">
          <button type="button" 
                  onclick="document.getElementById('bulk-group-modal').classList.add('hidden')"
                  class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800/50 hover:bg-gray-100 dark:hover:bg-gray-800/80 rounded-lg border border-gray-300 dark:border-gray-700/30 transition-all duration-200 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800 shadow-sm hover:shadow-md">
            Cancel
          </button>
          <%= form.submit "Assign to Selected Users", class: "px-4 py-2 text-sm font-medium text-white bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  let bulkMode = false;

  function toggleBulkMode() {
    bulkMode = !bulkMode;
    const columns = document.querySelectorAll('.bulk-select-column');
    const btn = document.getElementById('bulk-toggle-btn');
    
    columns.forEach(col => {
      col.style.display = bulkMode ? 'table-cell' : 'none';
    });
    
    if (bulkMode) {
      btn.innerHTML = '<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>Cancel Bulk Mode';
      btn.classList.remove('from-purple-600', 'to-purple-700', 'hover:from-purple-700', 'hover:to-purple-800');
      btn.classList.add('from-red-500', 'to-red-600', 'hover:from-red-600', 'hover:to-red-700');
      btn.style.background = 'linear-gradient(to right, #ef4444, #dc2626)';
    } else {
      btn.innerHTML = '<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" /></svg>Bulk Assign Groups';
      btn.classList.remove('from-red-500', 'to-red-600', 'hover:from-red-600', 'hover:to-red-700');
      btn.classList.add('from-purple-600', 'to-purple-700', 'hover:from-purple-700', 'hover:to-purple-800');
      btn.style.background = 'linear-gradient(to right, #9333ea, #7e22ce)';
      // Uncheck all
      document.querySelectorAll('.user-checkbox').forEach(cb => cb.checked = false);
      document.getElementById('select-all-users').checked = false;
      updateSelectedCount();
    }
  }

  function toggleAllUsers(checkbox) {
    document.querySelectorAll('.user-checkbox').forEach(cb => {
      cb.checked = checkbox.checked;
    });
    updateSelectedCount();
  }

  function updateSelectedCount() {
    const selected = document.querySelectorAll('.user-checkbox:checked').length;
    const countEl = document.getElementById('selected-users-count');
    if (countEl) {
      if (selected > 0) {
        countEl.textContent = `${selected} user${selected > 1 ? 's' : ''} selected`;
        countEl.classList.remove('text-gray-400');
        countEl.classList.add('text-blue-600', 'dark:text-blue-400');
      } else {
        countEl.textContent = 'No users selected';
        countEl.classList.remove('text-blue-600', 'dark:text-blue-400');
        countEl.classList.add('text-gray-400');
      }
    }
  }

  function openBulkModal() {
    const selectedIds = Array.from(document.querySelectorAll('.user-checkbox:checked')).map(cb => cb.value);
    const form = document.querySelector('#bulk-group-modal form');
    if (form) {
      // Remove existing hidden inputs
      form.querySelectorAll('input[name="user_ids[]"]').forEach(input => input.remove());
      // Add new hidden inputs
      selectedIds.forEach(id => {
        const input = document.createElement('input');
        input.type = 'hidden';
        input.name = 'user_ids[]';
        input.value = id;
        form.appendChild(input);
      });
    }
    document.getElementById('bulk-group-modal').classList.remove('hidden');
  }

  // Update count when checkboxes change
  document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.user-checkbox').forEach(cb => {
      cb.addEventListener('change', updateSelectedCount);
    });
  });
</script>

