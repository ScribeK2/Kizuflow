<script nonce="<%= content_security_policy_nonce %>">
  let bulkMode = false;
  let currentTempPassword = '';

  // Get CSRF token for fetch requests
  function getCSRFToken() {
    const token = document.querySelector('meta[name="csrf-token"]');
    return token ? token.getAttribute('content') : '';
  }

  async function resetUserPassword(userId, userEmail, buttonElement) {
    // Confirm action
    if (!confirm(`Are you sure you want to generate a temporary password for ${userEmail}? They will be able to log in immediately with this password.`)) {
      return;
    }

    // Show loading state
    const originalHTML = buttonElement.innerHTML;
    buttonElement.disabled = true;
    buttonElement.innerHTML = '<svg class="w-3 h-3 mr-1 animate-spin" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>Generating...';

    try {
      const csrfToken = getCSRFToken();
      if (!csrfToken) {
        throw new Error('CSRF token not found. Please refresh the page.');
      }

      const response = await fetch(`/admin/users/${userId}/reset_password`, {
        method: 'POST',
        headers: {
          'X-CSRF-Token': csrfToken,
          'Content-Type': 'application/json',
          'Accept': 'application/json'
        },
        credentials: 'same-origin'
      });

      const data = await response.json();

      if (!response.ok) {
        throw new Error(data.error || `Server error: ${response.status}`);
      }

      if (data && data.success && data.password) {
        // Store password globally for copy function
        currentTempPassword = data.password;

        // Update modal with user email and password
        document.getElementById('reset-modal-user-email').textContent = data.email || userEmail;
        document.getElementById('temp-password-display').textContent = data.password;

        // Show modal
        document.getElementById('password-reset-modal').classList.remove('hidden');
      } else {
        alert('Failed to generate temporary password. Please try again.');
      }
    } catch (error) {
      console.error('Password reset error:', error);
      alert('An error occurred while generating the temporary password. Please try again.');
    } finally {
      // Restore button
      buttonElement.disabled = false;
      buttonElement.innerHTML = originalHTML;
    }
  }

  // Copy password to clipboard
  function copyTempPassword(buttonElement) {
    if (currentTempPassword) {
      navigator.clipboard.writeText(currentTempPassword).then(function() {
        // Show feedback
        const copyBtn = buttonElement;
        const originalText = copyBtn.innerHTML;
        copyBtn.innerHTML = '<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>Copied!';
        copyBtn.classList.add('bg-green-100', 'dark:bg-green-900/30', 'border-green-300', 'dark:border-green-700/30');
        setTimeout(function() {
          copyBtn.innerHTML = originalText;
          copyBtn.classList.remove('bg-green-100', 'dark:bg-green-900/30', 'border-green-300', 'dark:border-green-700/30');
        }, 2000);
      }).catch(function(err) {
        alert('Failed to copy password. Please copy it manually.');
        console.error('Failed to copy:', err);
      });
    }
  }

  function toggleBulkMode() {
    bulkMode = !bulkMode;
    const columns = document.querySelectorAll('.bulk-select-column');
    const btn = document.getElementById('bulk-toggle-btn');
    
    columns.forEach(col => {
      col.style.display = bulkMode ? 'table-cell' : 'none';
    });
    
    if (bulkMode) {
      btn.innerHTML = '<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>Cancel Bulk Mode';
      btn.classList.remove('bg-slate-600', 'hover:bg-slate-700');
      btn.classList.add('bg-red-600', 'hover:bg-red-700');
    } else {
      btn.innerHTML = '<svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" /></svg>Bulk Assign Groups';
      btn.classList.remove('bg-red-600', 'hover:bg-red-700');
      btn.classList.add('bg-slate-600', 'hover:bg-slate-700');
      // Uncheck all
      document.querySelectorAll('.user-checkbox').forEach(cb => cb.checked = false);
      document.getElementById('select-all-users').checked = false;
      updateSelectedCount();
    }
  }

  function toggleAllUsers(checkbox) {
    document.querySelectorAll('.user-checkbox').forEach(cb => {
      cb.checked = checkbox.checked;
    });
    updateSelectedCount();
  }

  function updateSelectedCount() {
    const selected = document.querySelectorAll('.user-checkbox:checked').length;
    const countEl = document.getElementById('selected-users-count');
    if (countEl) {
      if (selected > 0) {
        countEl.textContent = `${selected} user${selected > 1 ? 's' : ''} selected`;
        countEl.classList.remove('text-gray-400');
        countEl.classList.add('text-blue-600', 'dark:text-blue-400');
      } else {
        countEl.textContent = 'No users selected';
        countEl.classList.remove('text-blue-600', 'dark:text-blue-400');
        countEl.classList.add('text-gray-400');
      }
    }
  }

  function openBulkModal() {
    const selectedIds = Array.from(document.querySelectorAll('.user-checkbox:checked')).map(cb => cb.value);
    const form = document.querySelector('#bulk-group-modal form');
    if (form) {
      // Remove existing hidden inputs
      form.querySelectorAll('input[name="user_ids[]"]').forEach(input => input.remove());
      // Add new hidden inputs
      selectedIds.forEach(id => {
        const input = document.createElement('input');
        input.type = 'hidden';
        input.name = 'user_ids[]';
        input.value = id;
        form.appendChild(input);
      });
    }
    document.getElementById('bulk-group-modal').classList.remove('hidden');
  }

  // Attach all button listeners (replacing inline onclick/onchange handlers blocked by CSP nonce policy)
  function attachAdminUserListeners() {
    // Bulk toggle button
    const bulkBtn = document.getElementById('bulk-toggle-btn');
    if (bulkBtn && !bulkBtn.dataset.listenerAttached) {
      bulkBtn.dataset.listenerAttached = 'true';
      bulkBtn.addEventListener('click', function() {
        if (bulkMode && document.querySelectorAll('.user-checkbox:checked').length > 0) {
          openBulkModal();
        } else {
          toggleBulkMode();
        }
      });
    }

    // Select-all checkbox
    const selectAll = document.getElementById('select-all-users');
    if (selectAll && !selectAll.dataset.listenerAttached) {
      selectAll.dataset.listenerAttached = 'true';
      selectAll.addEventListener('change', function() {
        toggleAllUsers(this);
      });
    }

    // Individual "Groups" buttons (open per-user modal)
    document.querySelectorAll('.open-group-modal-btn').forEach(function(btn) {
      if (btn.dataset.listenerAttached === 'true') return;
      btn.dataset.listenerAttached = 'true';
      btn.addEventListener('click', function() {
        var modalId = btn.dataset.modalId;
        var modal = document.getElementById(modalId);
        if (modal) modal.classList.remove('hidden');
      });
    });

    // Close buttons inside individual group modals (X and Cancel)
    document.querySelectorAll('.close-group-modal-btn').forEach(function(btn) {
      if (btn.dataset.listenerAttached === 'true') return;
      btn.dataset.listenerAttached = 'true';
      btn.addEventListener('click', function() {
        var modalId = btn.dataset.modalId;
        var modal = document.getElementById(modalId);
        if (modal) modal.classList.add('hidden');
      });
    });

    // Close buttons inside bulk group modal (X and Cancel)
    document.querySelectorAll('.close-bulk-modal-btn').forEach(function(btn) {
      if (btn.dataset.listenerAttached === 'true') return;
      btn.dataset.listenerAttached = 'true';
      btn.addEventListener('click', function() {
        document.getElementById('bulk-group-modal').classList.add('hidden');
      });
    });

    // User checkboxes - update count on change
    document.querySelectorAll('.user-checkbox').forEach(function(cb) {
      if (cb.dataset.listenerAttached === 'true') return;
      cb.dataset.listenerAttached = 'true';
      cb.addEventListener('change', updateSelectedCount);
    });
  }

  // Handle password reset button clicks using event delegation (works with Turbo)
  function attachResetListeners() {
    document.querySelectorAll('.reset-password-btn').forEach(function(buttonElement) {
      // Skip if already has listener (check for data attribute)
      if (buttonElement.dataset.listenerAttached === 'true') {
        return;
      }
      buttonElement.dataset.listenerAttached = 'true';
      
      buttonElement.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        const userId = buttonElement.dataset.userId;
        const userEmail = buttonElement.dataset.userEmail;
        resetUserPassword(userId, userEmail, buttonElement);
      });
    });
  }

  // Attach all listeners on initial load
  function attachAllListeners() {
    attachAdminUserListeners();
    attachResetListeners();
    attachModalCloseListeners();
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', attachAllListeners);
  } else {
    attachAllListeners();
  }

  // Re-attach on Turbo navigation
  document.addEventListener('turbo:load', attachAllListeners);

  // Handle password reset modal close buttons
  function attachModalCloseListeners() {
    const modal = document.getElementById('password-reset-modal');
    if (!modal) return;

    // Close X button
    const closeXBtn = document.getElementById('password-reset-modal-close-x');
    if (closeXBtn && !closeXBtn.dataset.listenerAttached) {
      closeXBtn.dataset.listenerAttached = 'true';
      closeXBtn.addEventListener('click', function() {
        modal.classList.add('hidden');
      });
    }

    // Done button
    const doneBtn = document.getElementById('password-reset-modal-done');
    if (doneBtn && !doneBtn.dataset.listenerAttached) {
      doneBtn.dataset.listenerAttached = 'true';
      doneBtn.addEventListener('click', function() {
        modal.classList.add('hidden');
      });
    }

    // Copy button
    const copyBtn = document.getElementById('password-reset-modal-copy');
    if (copyBtn && !copyBtn.dataset.listenerAttached) {
      copyBtn.dataset.listenerAttached = 'true';
      copyBtn.addEventListener('click', function() {
        copyTempPassword(copyBtn);
      });
    }
  }
</script>

