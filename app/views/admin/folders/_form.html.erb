<%= form_with(model: [:admin, group, folder], class: "solid-card p-6 space-y-4") do |f| %>
  <% if folder.errors.any? %>
    <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4">
      <h3 class="text-sm font-medium text-red-800 dark:text-red-300"><%= pluralize(folder.errors.count, "error") %> prevented saving:</h3>
      <ul class="mt-2 text-sm text-red-700 dark:text-red-400 list-disc pl-5">
        <% folder.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
    <%= f.text_field :name, class: "block w-full rounded-lg border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-gray-900 dark:text-gray-100 px-3 py-2 focus:ring-2 focus:ring-slate-500 focus:border-slate-500 transition-colors", placeholder: "e.g. Website Issues" %>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
    <%= f.text_area :description, rows: 2, class: "block w-full rounded-lg border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-gray-900 dark:text-gray-100 px-3 py-2 focus:ring-2 focus:ring-slate-500 focus:border-slate-500 transition-colors", placeholder: "Optional description" %>
  </div>

  <div class="flex justify-end space-x-3 pt-4">
    <%= link_to "Cancel", admin_group_folders_path(group), class: "px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-slate-100 dark:bg-slate-700 rounded-lg hover:bg-slate-200 dark:hover:bg-slate-600 transition-colors" %>
    <%= f.submit folder.persisted? ? "Update Folder" : "Create Folder", class: "px-4 py-2 text-sm font-medium text-white bg-slate-600 hover:bg-slate-700 rounded-lg shadow-sm transition-colors cursor-pointer" %>
  </div>
<% end %>
