<%# Message-specific fields partial %>
<%# Message steps display read-only information/guidance to the CSR %>

<div class="field-container">
  <div class="bg-cyan-50 dark:bg-cyan-900/20 border border-cyan-200 dark:border-cyan-800/30 rounded-lg p-3 mb-4">
    <div class="flex items-start">
      <svg class="w-5 h-5 text-cyan-600 dark:text-cyan-400 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <div class="flex-1">
        <p class="text-sm text-cyan-800 dark:text-cyan-300">
          <strong>Message Step:</strong> Display information or guidance to the CSR. This step auto-advances and doesn't require user input. Use <code class="px-1 py-0.5 bg-cyan-100 dark:bg-cyan-800 rounded text-xs">{{variable_name}}</code> to include dynamic content.
        </p>
      </div>
    </div>
  </div>

  <%# Content Field %>
  <div class="mb-4" data-controller="step-image-upload">
    <div class="flex items-center justify-between mb-2">
      <label class="block text-sm font-medium text-gray-700 dark:text-gray-200">
        Message Content
        <span class="font-normal text-gray-500 dark:text-gray-400">(optional)</span>
      </label>
      <button type="button"
              data-action="click->step-image-upload#pickImage"
              class="inline-flex items-center gap-2 px-3 py-1.5 text-sm font-medium text-blue-700 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 rounded-lg hover:bg-blue-100 dark:hover:bg-blue-900/40 transition-colors">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
        </svg>
        Insert Image
      </button>
    </div>
    <textarea name="workflow[steps][][content]"
              placeholder="Enter the message to display to the CSR... (type {{ to insert variables)"
              class="w-full border border-gray-300 dark:border-gray-600 rounded-lg px-3 py-3 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-400 focus:ring-2 focus:ring-cyan-500 focus:border-cyan-500 text-sm leading-relaxed resize-y"
              rows="4"
              data-step-form-target="field"
              data-variable-autocomplete-target="input"
              data-step-image-upload-target="textarea"><%= step['content'] %></textarea>
    <span data-step-image-upload-target="status" class="hidden text-xs text-blue-600 dark:text-blue-400 mt-1"></span>
    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
      This message will be shown to the CSR during workflow execution. Supports Markdown: **bold**, *italic*, [links](url), ![images](url).
    </p>
  </div>
</div>
