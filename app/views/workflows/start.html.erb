<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8 pb-28 sm:pb-8">
  <!-- Header Section -->
  <div class="mb-8 animate-fade-in text-center">
    <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-gray-100 tracking-tight mb-4">
      <%= @workflow.title %>
    </h1>
    <% if @workflow.has_description? %>
      <div class="text-gray-600 dark:text-gray-300 prose prose-lg dark:prose-invert max-w-none mt-4 mx-auto">
        <% begin %>
          <%= @workflow.description if @workflow.description.present? %>
        <% rescue => e %>
          <%= simple_format(@workflow.description_text) %>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Workflow Info Card -->
  <div class="solid-card overflow-hidden animate-fade-in-up mb-6">
    <div class="px-6 py-5">
      <div class="flex items-center justify-center space-x-6 text-sm text-gray-600 dark:text-gray-400">
        <div class="flex items-center">
          <svg class="w-5 h-5 mr-2 text-slate-500 dark:text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
          </svg>
          <span><%= pluralize(@workflow.steps&.length || 0, "step") %></span>
        </div>
        <% if @workflow.is_public? %>
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-emerald-500 dark:text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
            <span>Public</span>
          </div>
        <% end %>
      </div>
      <% dots = step_type_composition_dots(@workflow) %>
      <% if dots %>
        <div class="flex items-center justify-center gap-1 mt-3">
          <%= dots %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Start Button -->
  <div class="text-center animate-fade-in-up sm:relative sm:bg-transparent fixed bottom-0 left-0 right-0 bg-white dark:bg-slate-900 border-t border-slate-200 dark:border-slate-700 sm:border-0 p-4 sm:p-0 z-10" style="animation-delay: 0.2s;">
    <%= form_with url: begin_execution_workflow_path(@workflow), method: :post, local: true,
        class: "inline-block",
        data: { controller: "form-submit", action: "submit->form-submit#submit" } do |form| %>
      <%= form.submit "Start Workflow",
          data: { form_submit_target: "submit" },
          aria: { label: "Start workflow: #{@workflow.title}" },
          class: "bg-emerald-500 hover:bg-emerald-600 text-white px-12 py-5 rounded-full text-xl font-semibold shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 dark:focus:ring-offset-slate-800 inline-flex items-center justify-center min-w-[200px]" %>
    <% end %>
    <p class="text-sm text-gray-500 dark:text-gray-400 mt-3">
      Begin step-by-step guided execution
    </p>
  </div>

  <!-- Workflow Steps Preview -->
  <% if @workflow.steps.present? && @workflow.steps.any? %>
    <div class="mt-8 animate-fade-in-up" style="animation-delay: 0.3s;">
      <div class="solid-card overflow-hidden">
        <div class="px-6 py-4">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">
            Workflow Steps (<%= @workflow.steps.length %> total)
          </h3>
        </div>
        <div class="px-6 py-4 border-t border-slate-200 dark:border-slate-700">
          <div class="border-l-2 border-slate-200 dark:border-slate-700 ml-4" role="list">
            <div class="space-y-3 pl-4">
              <% @workflow.steps.each_with_index do |step, index| %>
                <div class="flex items-start space-x-3 p-3 rounded-lg bg-slate-50 dark:bg-slate-800/50" role="listitem">
                  <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-slate-600 dark:bg-slate-500 text-white text-sm font-semibold flex-shrink-0">
                    <%= index + 1 %>
                  </span>
                  <div class="flex-1 min-w-0">
                    <h4 class="text-base font-semibold text-gray-900 dark:text-gray-100">
                      <span class="inline-flex items-center gap-1"><%= step_type_svg_icon(step['type'], css_classes: "w-4 h-4 inline-block") %> <%= step['title'] %></span>
                    </h4>
                    <% snippet = step['question'] || step['content'] || step['instructions'] || step['description'] %>
                    <% if snippet.present? %>
                      <p class="text-sm text-gray-500 dark:text-gray-400 mt-1 line-clamp-2"><%= truncate(snippet, length: 120) %></p>
                    <% end %>
                    <span class="<%= step_type_badge_classes(step['type']) %> mt-2">
                      <%= step_type_label(step['type']) %>
                    </span>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Back Link -->
  <div class="mt-6 text-center">
    <%= link_to workflows_path, class: "text-slate-600 dark:text-slate-400 hover:text-slate-800 dark:hover:text-slate-300 text-sm font-medium transition-colors duration-200 inline-flex items-center" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to Workflows
    <% end %>
  </div>
</div>
