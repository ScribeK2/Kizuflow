<aside class="workflow-sidebar" data-controller="workflow-sidebar">
  <!-- Mobile Toggle Button -->
  <button type="button"
          data-action="click->workflow-sidebar#toggle"
          class="md:hidden mb-4 w-full bg-white dark:bg-slate-800 border border-slate-300 dark:border-slate-600 rounded-lg px-4 py-2 text-left text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors">
    <div class="flex items-center justify-between">
      <span>Groups</span>
      <svg class="w-5 h-5" data-workflow-sidebar-target="toggleIcon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </div>
  </button>

  <!-- Sidebar Content -->
  <div class="solid-card overflow-hidden animate-fade-in-up md:block hidden" data-workflow-sidebar-target="sidebar">
    <div class="px-4 py-3 border-b border-slate-200 dark:border-slate-700">
      <h2 class="text-lg font-bold text-gray-900 dark:text-gray-100">Groups</h2>
    </div>

    <nav class="p-4">
      <ul class="space-y-1">
        <!-- All Workflows Option -->
        <li>
          <%= link_to workflows_path(search: params[:search]),
                      class: "flex items-center pl-2 pr-3 py-2 rounded-lg text-sm font-medium transition-colors border-l-4 #{'border-slate-600 dark:border-slate-400 bg-slate-100 dark:bg-slate-700 text-slate-800 dark:text-slate-200' if @selected_group.nil?} #{'border-transparent text-gray-700 dark:text-gray-300 hover:bg-slate-100 dark:hover:bg-slate-700' if @selected_group.present?}" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            All Workflows
            <% if @selected_group.nil? && @workflows %>
              <span class="ml-auto text-xs bg-slate-200 dark:bg-slate-600 px-2 py-0.5 rounded">
                <%= @workflows.count %>
              </span>
            <% end %>
          <% end %>
        </li>

        <!-- Groups Tree -->
        <% if @accessible_groups.any? %>
          <% @accessible_groups.each do |root_group| %>
            <%= render partial: "workflows/group_sidebar_item", locals: { group: root_group, level: 0, selected_group: @selected_group } %>
          <% end %>
        <% else %>
          <li class="px-3 py-2 text-sm text-gray-500 dark:text-gray-400">
            No groups available
          </li>
        <% end %>
      </ul>
    </nav>

    <% if @selected_group.present? && current_user&.admin? %>
      <div class="px-4 pb-4 pt-0 border-t border-slate-200 dark:border-slate-700">
        <%= link_to admin_group_folders_path(@selected_group),
                    class: "flex items-center px-3 py-2 rounded-lg text-sm font-medium text-slate-500 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-700 hover:text-slate-700 dark:hover:text-slate-300 transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
          </svg>
          Manage Folders
        <% end %>
      </div>
    <% end %>
  </div>
</aside>
