<%# Step Addition Modal %>
<div id="step-modal"
     class="hidden fixed inset-0 z-50 overflow-y-auto"
     data-step-modal-target="modalContainer"
     data-action="click->step-modal#backdropClick">
  <%# Backdrop %>
  <div class="fixed inset-0 bg-slate-900/60 transition-opacity z-0" data-step-modal-target="backdrop"></div>

  <%# Modal wrapper for centering %>
  <div class="fixed inset-0 z-10 overflow-y-auto">
    <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:block sm:p-0">
      <%# Center modal spacer %>
      <span class="hidden sm:inline-block sm:align-middle sm:h-screen">&#8203;</span>

      <%# Modal panel %>
      <div class="solid-modal inline-block align-bottom text-left overflow-hidden transform transition-all sm:my-8 sm:align-middle sm:max-w-2xl sm:w-full animate-scale-in relative z-20"
           data-step-modal-target="modal"
           data-action="click->step-modal#stopPropagation">
      <div class="px-4 pt-5 pb-4 sm:p-6">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100">Add Step</h3>
          <button type="button"
                  data-action="click->step-modal#close"
                  class="text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 transition-colors duration-200 hover:scale-110">
            <span class="sr-only">Close</span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <form data-step-modal-target="form" id="step-modal-form" novalidate>
          <%# Step Type Selector %>
          <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-2">Step Type</label>
            <div class="grid grid-cols-2 sm:grid-cols-4 gap-2">
              <% [
                { value: 'question', label: 'Question', icon: '?', color: 'slate' },
                { value: 'decision', label: 'Decision', icon: '/', color: 'slate' },
                { value: 'action', label: 'Action', icon: '!', color: 'emerald' },
                { value: 'checkpoint', label: 'Checkpoint', icon: 'v', color: 'amber' }
              ].each do |type| %>
                <label class="flex flex-col items-center gap-1 p-3 border-2 rounded-lg cursor-pointer hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors border-slate-300 dark:border-slate-600 step-type-option"
                       data-step-type-option="<%= type[:value] %>"
                       data-step-type-color="<%= type[:color] %>"
                       data-type="<%= type[:value] %>">
                  <input type="radio"
                         name="step_type"
                         value="<%= type[:value] %>"
                         data-step-modal-target="stepType"
                         data-action="change->step-modal#updateStepType"
                         data-step-modal-type-param="<%= type[:value] %>"
                         <%= 'checked' if type[:value] == 'question' %>
                         class="sr-only">
                  <span class="text-2xl font-bold"><%= type[:icon] %></span>
                  <span class="text-xs font-medium text-gray-700 dark:text-gray-300"><%= type[:label] %></span>
                </label>
              <% end %>
            </div>
          </div>

          <%# Template Selector %>
          <div class="mb-4" data-step-modal-target="templateContainer">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1">Apply Template (Optional)</label>
            <select data-step-modal-target="templateSelect"
                    data-action="change->step-modal#applyTemplate"
                    class="w-full border border-slate-300 dark:border-slate-600 rounded-lg shadow-sm py-2 px-3 bg-white dark:bg-slate-700 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-slate-500 dark:focus:ring-slate-400">
              <option value="">-- Select a template --</option>
            </select>
            <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Quickly fill form fields with a predefined template</p>
          </div>

          <%# Variable Suggestions %>
          <div class="mb-4 p-3 bg-slate-50 dark:bg-slate-800/50 rounded-lg border border-slate-200 dark:border-slate-700" data-step-modal-target="variableSuggest">
            <p class="text-xs text-gray-500 dark:text-gray-400">Loading variables...</p>
          </div>

          <%# Step Form Fields %>
          <div id="step-form-fields" class="space-y-4">
            <%# Basic fields that apply to all step types %>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1">Title <span class="text-red-500">*</span></label>
              <input type="text"
                     name="title"
                     id="modal-step-title"
                     placeholder="Step title"
                     class="w-full border border-slate-300 dark:border-slate-600 rounded-lg shadow-sm py-2 px-3 bg-white dark:bg-slate-700 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-slate-500 dark:focus:ring-slate-400">
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1">Description</label>
              <textarea name="description"
                        id="modal-step-description"
                        placeholder="Step description (optional)"
                        rows="2"
                        class="w-full border border-slate-300 dark:border-slate-600 rounded-lg shadow-sm py-2 px-3 bg-white dark:bg-slate-700 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-slate-500 dark:focus:ring-slate-400"></textarea>
            </div>

            <%# Type-specific fields - shown based on step type %>
            <div id="type-specific-fields" class="space-y-4">
              <%# Question fields %>
              <div id="question-fields" class="hidden">
                <div>
                  <label class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1">Question Text</label>
                  <input type="text"
                         name="question"
                         id="modal-step-question"
                         placeholder="Enter your question"
                         class="w-full border border-slate-300 dark:border-slate-600 rounded-lg shadow-sm py-2 px-3 bg-white dark:bg-slate-700 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-slate-500 dark:focus:ring-slate-400">
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1">Answer Type</label>
                  <select name="answer_type"
                          id="modal-step-answer-type"
                          class="w-full border border-slate-300 dark:border-slate-600 rounded-lg shadow-sm py-2 px-3 bg-white dark:bg-slate-700 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-slate-500 dark:focus:ring-slate-400">
                    <option value="">Select answer type...</option>
                    <option value="text">Text</option>
                    <option value="yes_no">Yes/No</option>
                    <option value="multiple_choice">Multiple Choice</option>
                    <option value="dropdown">Dropdown</option>
                    <option value="date">Date</option>
                    <option value="number">Number</option>
                    <option value="file">File Upload</option>
                  </select>
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1">Variable Name</label>
                  <input type="text"
                         name="variable_name"
                         id="modal-step-variable-name"
                         placeholder="e.g., user_name, age, etc."
                         class="w-full border border-slate-300 dark:border-slate-600 rounded-lg shadow-sm py-2 px-3 bg-white dark:bg-slate-700 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-slate-500 dark:focus:ring-slate-400">
                  <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Optional: Name this answer for use in decision steps</p>
                </div>
              </div>

              <%# Decision fields %>
              <div id="decision-fields" class="hidden">
                <div>
                  <label class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1">Condition</label>
                  <input type="text"
                         name="condition"
                         id="modal-step-condition"
                         placeholder="e.g., variable_name == 'value'"
                         class="w-full border border-slate-300 dark:border-slate-600 rounded-lg shadow-sm py-2 px-3 bg-white dark:bg-slate-700 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-slate-500 dark:focus:ring-slate-400">
                  <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">You can add branches after creating the step</p>
                </div>
              </div>

              <%# Action fields %>
              <div id="action-fields" class="hidden">
                <div>
                  <label class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1">Action Type</label>
                  <input type="text"
                         name="action_type"
                         id="modal-step-action-type"
                         placeholder="e.g., Email, Notification, etc."
                         class="w-full border border-slate-300 dark:border-slate-600 rounded-lg shadow-sm py-2 px-3 bg-white dark:bg-slate-700 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-slate-500 dark:focus:ring-slate-400">
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1">Instructions</label>
                  <textarea name="instructions"
                            id="modal-step-instructions"
                            placeholder="Detailed instructions for this action..."
                            rows="3"
                            class="w-full border border-slate-300 dark:border-slate-600 rounded-lg shadow-sm py-2 px-3 bg-white dark:bg-slate-700 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-slate-500 dark:focus:ring-slate-400"></textarea>
                </div>
              </div>

              <%# Checkpoint fields %>
              <div id="checkpoint-fields" class="hidden">
                <p class="text-sm text-gray-600 dark:text-gray-400">Checkpoint steps mark important milestones in your workflow.</p>
              </div>
            </div>
          </div>

          <div class="mt-6 flex justify-end space-x-3">
            <button type="button"
                    data-action="click->step-modal#close"
                    class="bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 text-gray-700 dark:text-gray-300 px-4 py-2 rounded-full text-sm font-medium border border-slate-200 dark:border-slate-600 transition-all duration-200 hover:scale-105">
              Cancel
            </button>
            <button type="button"
                    id="add-step-button"
                    data-action="click->step-modal#addStep"
                    class="bg-slate-600 hover:bg-slate-700 text-white px-4 py-2 rounded-full text-sm font-medium shadow-md hover:shadow-lg transition-all duration-300 hover:scale-105">
              Add Step
            </button>
          </div>
        </form>
      </div>
    </div>
    </div>
  </div>
</div>
