<%# Workflow list item partial with caching
    Cache key includes: workflow, current_user, and selected_group
    Busts when: workflow updated, user permissions change, or group context changes %>
<% cache [workflow, current_user, @selected_group, current_user&.role] do %>
  <li class="hover:bg-white/20 dark:hover:bg-gray-800/20 transition-colors duration-200 animate-fade-in-up" style="animation-delay: <%= local_assigns[:index].to_i * 0.05 %>s;">
    <div class="px-6 py-5 sm:px-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center flex-1 min-w-0">
          <div class="flex-shrink-0 mr-4">
            <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center">
              <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
          </div>
          <div class="ml-4 flex-1 min-w-0">
            <div class="text-base font-semibold text-gray-900 dark:text-gray-100 mb-1 flex items-center gap-2">
              <%= link_to workflow.title, workflow_path(workflow), class: "hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200" %>
              <% if workflow.is_public? %>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300" title="Public workflow">
                  Public
                </span>
              <% end %>
              <% if workflow.user != current_user %>
                <span class="text-xs text-gray-500 dark:text-gray-400">by <%= workflow.user.email %></span>
              <% end %>
              <% if workflow.primary_group.present? && workflow.primary_group != @selected_group %>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300">
                  <%= workflow.primary_group.name %>
                </span>
              <% end %>
            </div>
            <div class="text-sm text-gray-600 dark:text-gray-400 mb-1">
              <%= truncate(workflow.description_text.presence || "No description", length: 100) %>
            </div>
            <div class="text-xs text-gray-500 dark:text-gray-500 mt-1">
              <%= pluralize(workflow.steps&.length || 0, "step") %> â€¢ Created <%= time_ago_in_words(workflow.created_at) %> ago
            </div>
          </div>
        </div>
        <div class="flex items-center space-x-3 ml-4">
          <%= link_to start_workflow_path(workflow), class: "px-4 py-2 text-sm font-medium text-white bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 inline-flex items-center" do %>
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Start
          <% end %>
          <%= link_to workflow_path(workflow), class: "px-4 py-2 text-sm font-medium text-blue-600 dark:text-blue-400 bg-blue-50/50 dark:bg-blue-900/20 rounded-lg hover:bg-blue-50/80 dark:hover:bg-blue-900/40 transition-all duration-200 hover:scale-105" do %>
            View
          <% end %>
          <% if workflow.can_be_edited_by?(current_user) %>
            <%= link_to edit_workflow_path(workflow), class: "px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white/50 dark:bg-gray-800/50 rounded-lg hover:bg-white/80 dark:hover:bg-gray-800/80 transition-all duration-200 hover:scale-105" do %>
              Edit
            <% end %>
          <% end %>
          <% if workflow.can_be_deleted_by?(current_user) %>
            <%= link_to workflow_path(workflow), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "px-4 py-2 text-sm font-medium text-red-600 dark:text-red-400 bg-red-50/50 dark:bg-red-900/20 rounded-lg hover:bg-red-50/80 dark:hover:bg-red-900/40 transition-all duration-200 hover:scale-105" do %>
              Delete
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </li>
<% end %>
