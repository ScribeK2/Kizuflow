<% sample_variables = local_assigns.fetch(:sample_variables, {}) %>
<div class="preview-pane bg-gray-50 border rounded-lg p-4">
  <h4 class="text-sm font-semibold text-gray-700 mb-2">Live Preview</h4>
  <% if sample_variables.present? %>
    <p class="text-xs text-gray-500 mb-2 italic">Showing preview with sample variable values</p>
  <% end %>
  
  <% if step && step["type"] %>
    <% case step["type"] %>
    <% when "question" %>
      <div class="space-y-3">
        <% if step["title"].present? %>
          <h5 class="font-medium text-gray-900"><%= VariableInterpolator.interpolate(step["title"], sample_variables) %></h5>
        <% end %>
        
        <% if step["description"].present? %>
          <div class="text-sm text-gray-600">
            <%= render_step_markdown(VariableInterpolator.interpolate(step["description"], sample_variables)) %>
          </div>
        <% end %>

        <% if step["question"].present? %>
          <p class="font-medium text-gray-800"><%= VariableInterpolator.interpolate(step["question"], sample_variables) %></p>
        <% end %>
        
        <!-- Preview based on answer type -->
        <div class="mt-3">
          <% case step["answer_type"] %>
          <% when "text" %>
            <input type="text" 
                   class="w-full border border-gray-300 rounded-md px-3 py-2 bg-white" 
                   placeholder="Your answer..." 
                   disabled />
          <% when "yes_no" %>
            <div class="flex gap-2">
              <button class="px-4 py-2 bg-green-500 text-white rounded-md hover:bg-green-600 transition-colors" disabled>
                Yes
              </button>
              <button class="px-4 py-2 bg-red-500 text-white rounded-md hover:bg-red-600 transition-colors" disabled>
                No
              </button>
            </div>
          <% when "multiple_choice" %>
            <div class="space-y-2">
              <% if step["options"].present? && step["options"].is_a?(Array) %>
                <% step["options"].each do |option| %>
                  <label class="flex items-center gap-2 p-2 border rounded-md hover:bg-gray-100 cursor-not-allowed">
                    <input type="radio" name="preview_<%= index %>" disabled class="cursor-not-allowed" />
                    <span class="text-sm"><%= option["label"] || option["value"] || "Option" %></span>
                  </label>
                <% end %>
              <% else %>
                <p class="text-xs text-gray-500 italic">No options defined yet</p>
              <% end %>
            </div>
          <% when "dropdown" %>
            <select class="w-full border border-gray-300 rounded-md px-3 py-2 bg-white" disabled>
              <option>Select an option</option>
              <% if step["options"].present? && step["options"].is_a?(Array) %>
                <% step["options"].each do |option| %>
                  <option><%= option["label"] || option["value"] %></option>
                <% end %>
              <% end %>
            </select>
          <% when "date" %>
            <input type="date" 
                   class="w-full border border-gray-300 rounded-md px-3 py-2 bg-white" 
                   disabled />
          <% when "number" %>
            <input type="number" 
                   class="w-full border border-gray-300 rounded-md px-3 py-2 bg-white" 
                   placeholder="Enter a number" 
                   disabled />
          <% when "file" %>
            <div class="border-2 border-dashed border-gray-300 rounded-md p-4 text-center">
              <p class="text-sm text-gray-500 inline-flex items-center gap-1"><%= ui_svg_icon('paperclip', css_classes: "w-4 h-4") %> File Upload</p>
              <input type="file" class="mt-2" disabled />
            </div>
          <% else %>
            <p class="text-xs text-gray-500 italic">Select an answer type to see preview</p>
          <% end %>
        </div>
        
        <% if step["variable_name"].present? %>
          <div class="mt-2 text-xs text-gray-500">
            <span class="font-mono bg-gray-200 px-2 py-1 rounded">Variable: <%= step["variable_name"] %></span>
          </div>
        <% end %>
      </div>
      
    <% when "action" %>
      <div class="space-y-2">
        <% if step["title"].present? %>
          <h5 class="font-medium text-gray-900"><%= VariableInterpolator.interpolate(step["title"], sample_variables) %></h5>
        <% end %>
        
        <% if step["description"].present? %>
          <div class="text-sm text-gray-600">
            <%= render_step_markdown(VariableInterpolator.interpolate(step["description"], sample_variables)) %>
          </div>
        <% end %>

        <% if step["action_type"].present? %>
          <div class="inline-flex items-center gap-2 px-3 py-1 bg-purple-100 text-purple-800 rounded-full text-xs font-medium">
            <%= step["action_type"].humanize %>
          </div>
        <% end %>
        
        <% if step["instructions"].present? %>
          <div class="mt-2 p-3 bg-white border rounded-md">
            <div class="text-sm text-gray-700"><%= render_step_markdown(VariableInterpolator.interpolate(step["instructions"], sample_variables)) %></div>
          </div>
        <% end %>
        
        <% if step["attachments"].present? && step["attachments"].is_a?(Array) && step["attachments"].any? %>
          <div class="mt-3">
            <p class="text-xs font-medium text-gray-500 mb-2">Attachments:</p>
            <div class="space-y-1">
              <% step["attachments"].each do |attachment_id| %>
                <% if attachment_id.present? %>
                  <% begin %>
                    <% blob = ActiveStorage::Blob.find_signed(attachment_id) %>
                    <div class="flex items-center gap-2 p-2 bg-white border rounded-md text-sm">
                      <span class="text-gray-600"><%= ui_svg_icon('paperclip', css_classes: "w-4 h-4") %></span>
                      <span class="text-gray-700"><%= blob.filename %></span>
                      <span class="text-xs text-gray-500">(<%= number_to_human_size(blob.byte_size) %>)</span>
                    </div>
                  <% rescue => e %>
                    <div class="flex items-center gap-2 p-2 bg-gray-100 border rounded-md text-sm text-gray-500">
                      <span><%= ui_svg_icon('paperclip', css_classes: "w-4 h-4") %></span>
                      <span>File attachment</span>
                    </div>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      
    <% when "decision" %>
      <div class="space-y-2">
        <% if step["title"].present? %>
          <h5 class="font-medium text-gray-900"><%= VariableInterpolator.interpolate(step["title"], sample_variables) %></h5>
        <% end %>

        <% if step["description"].present? %>
          <div class="text-sm text-gray-600">
            <%= render_step_markdown(VariableInterpolator.interpolate(step["description"], sample_variables)) %>
          </div>
        <% end %>

        <div class="mt-3 p-3 bg-white border rounded-md">
          <div class="flex items-center gap-2 mb-2">
            <span class="text-xs font-medium text-gray-500">Condition:</span>
            <code class="text-xs bg-gray-100 px-2 py-1 rounded">
              <%= step["condition"].present? ? step["condition"] : "No condition set" %>
            </code>
          </div>

          <div class="space-y-1 mt-3">
            <% if step["true_path"].present? %>
              <div class="flex items-center gap-2 text-sm">
                <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-green-100 text-green-800 text-xs font-bold">✓</span>
                <span class="text-gray-600">If true:</span>
                <span class="font-medium text-green-700">→ <%= step["true_path"] %></span>
              </div>
            <% end %>

            <% if step["false_path"].present? %>
              <div class="flex items-center gap-2 text-sm">
                <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-red-100 text-red-800 text-xs font-bold">✗</span>
                <span class="text-gray-600">If false:</span>
                <span class="font-medium text-red-700">→ <%= step["false_path"] %></span>
              </div>
            <% end %>
          </div>
        </div>
      </div>

    <% when "message" %>
      <div class="space-y-2">
        <% if step["title"].present? %>
          <h5 class="font-medium text-gray-900"><%= VariableInterpolator.interpolate(step["title"], sample_variables) %></h5>
        <% end %>

        <% if step["description"].present? %>
          <div class="text-sm text-gray-600">
            <%= render_step_markdown(VariableInterpolator.interpolate(step["description"], sample_variables)) %>
          </div>
        <% end %>

        <div class="mt-3 p-3 bg-cyan-50 border border-cyan-200 rounded-md">
          <div class="flex items-start gap-2">
            <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-cyan-100 text-cyan-700 text-xs font-bold flex-shrink-0">i</span>
            <div class="flex-1">
              <% if step["content"].present? %>
                <div class="text-sm text-cyan-800"><%= render_step_markdown(VariableInterpolator.interpolate(step["content"], sample_variables)) %></div>
              <% else %>
                <p class="text-sm text-cyan-600 italic">No message content yet</p>
              <% end %>
            </div>
          </div>
        </div>

        <p class="text-xs text-gray-500 mt-2">
          <span class="font-medium">Auto-advances</span> - This message will be displayed and the workflow continues automatically.
        </p>
      </div>

    <% when "escalate" %>
      <div class="space-y-2">
        <% if step["title"].present? %>
          <h5 class="font-medium text-gray-900"><%= VariableInterpolator.interpolate(step["title"], sample_variables) %></h5>
        <% end %>

        <% if step["description"].present? %>
          <div class="text-sm text-gray-600">
            <%= render_step_markdown(VariableInterpolator.interpolate(step["description"], sample_variables)) %>
          </div>
        <% end %>

        <div class="mt-3 p-3 bg-orange-50 border border-orange-200 rounded-md">
          <div class="flex items-center gap-2 mb-2">
            <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-orange-100 text-orange-700 text-xs font-bold">↑</span>
            <span class="font-medium text-orange-800">Escalation</span>
          </div>

          <div class="space-y-1 text-sm">
            <% if step["target_type"].present? || step["target_value"].present? %>
              <div class="flex items-center gap-2">
                <span class="text-orange-600">Target:</span>
                <span class="font-medium text-orange-800">
                  <%= step["target_type"]&.titleize %><%= " - #{step['target_value']}" if step["target_value"].present? %>
                </span>
              </div>
            <% end %>

            <% if step["priority"].present? %>
              <div class="flex items-center gap-2">
                <span class="text-orange-600">Priority:</span>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium
                  <%= case step['priority']
                      when 'urgent' then 'bg-red-100 text-red-800'
                      when 'high' then 'bg-orange-100 text-orange-800'
                      when 'normal' then 'bg-blue-100 text-blue-800'
                      else 'bg-gray-100 text-gray-800'
                      end %>">
                  <%= step["priority"].titleize %>
                </span>
              </div>
            <% end %>

            <% if step["reason_required"] == true || step["reason_required"] == "true" %>
              <p class="text-xs text-orange-600 mt-2">Reason required from CSR</p>
            <% end %>

            <% if step["notes"].present? %>
              <div class="mt-2 p-2 bg-white border border-orange-100 rounded text-sm text-gray-700">
                <%= render_step_markdown(VariableInterpolator.interpolate(step["notes"], sample_variables)) %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

    <% when "resolve" %>
      <div class="space-y-2">
        <% if step["title"].present? %>
          <h5 class="font-medium text-gray-900"><%= VariableInterpolator.interpolate(step["title"], sample_variables) %></h5>
        <% end %>

        <% if step["description"].present? %>
          <div class="text-sm text-gray-600">
            <%= render_step_markdown(VariableInterpolator.interpolate(step["description"], sample_variables)) %>
          </div>
        <% end %>

        <div class="mt-3 p-3 bg-green-50 border border-green-200 rounded-md">
          <div class="flex items-center gap-2 mb-2">
            <span class="inline-flex items-center justify-center w-6 h-6 rounded-full bg-green-100 text-green-700 text-xs font-bold">✓</span>
            <span class="font-medium text-green-800">Resolution</span>
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
              Terminal
            </span>
          </div>

          <div class="space-y-1 text-sm">
            <div class="flex items-center gap-2">
              <span class="text-green-600">Type:</span>
              <span class="font-medium text-green-800"><%= (step["resolution_type"] || "success").titleize %></span>
            </div>

            <% if step["resolution_code"].present? %>
              <div class="flex items-center gap-2">
                <span class="text-green-600">Code:</span>
                <code class="text-xs bg-green-100 px-2 py-0.5 rounded"><%= step["resolution_code"] %></code>
              </div>
            <% end %>

            <div class="flex flex-wrap gap-2 mt-2">
              <% if step["notes_required"] == true || step["notes_required"] == "true" %>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs bg-gray-100 text-gray-700">Notes required</span>
              <% end %>
              <% if step["survey_trigger"] == true || step["survey_trigger"] == "true" %>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs bg-blue-100 text-blue-700">Survey trigger</span>
              <% end %>
            </div>
          </div>
        </div>

        <p class="text-xs text-gray-500 mt-2">
          <span class="font-medium">Terminal step</span> - Workflow ends here with resolution metadata.
        </p>
      </div>

    <% else %>
      <p class="text-sm text-gray-500">Select a step type to see preview</p>
    <% end %>
  <% else %>
    <p class="text-sm text-gray-500 text-center py-4">Start filling in the form to see a live preview</p>
  <% end %>
</div>

