<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header Section -->
  <div class="mb-8 animate-fade-in">
    <div class="flex justify-between items-start mb-4">
      <div class="flex-1 min-w-0">
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-gray-100 tracking-tight mb-2">
          <%= @workflow.title %>
        </h1>
        <% if @workflow.has_description? %>
          <div class="text-gray-600 dark:text-gray-300 prose prose-sm dark:prose-invert max-w-none mt-3">
            <% begin %>
              <%= @workflow.description if @workflow.description.present? %>
            <% rescue => e %>
              <%= simple_format(@workflow.description_text) %>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="flex flex-col sm:flex-row gap-2 ml-4 flex-shrink-0">
        <% if @workflow.can_be_viewed_by?(current_user) %>
          <% if @workflow.is_public? %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-emerald-100 dark:bg-emerald-900/30 text-emerald-800 dark:text-emerald-300 mb-2 sm:mb-0">
              Public Workflow
            </span>
          <% end %>
        <% end %>
        <% if @workflow.can_be_edited_by?(current_user) %>
          <%= link_to edit_workflow_path(@workflow), class: "bg-slate-600 hover:bg-slate-700 text-white px-4 py-2 rounded-full text-sm font-medium shadow-md hover:shadow-lg transition-all duration-300 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2 dark:focus:ring-offset-slate-800 inline-flex items-center justify-center" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Edit
          <% end %>
        <% end %>
        <% if @workflow.can_be_viewed_by?(current_user) %>
          <%= link_to export_workflow_path(@workflow), class: "bg-emerald-500 hover:bg-emerald-600 text-white px-4 py-2 rounded-full text-sm font-medium shadow-md hover:shadow-lg transition-all duration-300 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 dark:focus:ring-offset-slate-800 inline-flex items-center justify-center" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
            </svg>
            Export JSON
          <% end %>
          <%= link_to export_pdf_workflow_path(@workflow), class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-full text-sm font-medium shadow-md hover:shadow-lg transition-all duration-300 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 dark:focus:ring-offset-slate-800 inline-flex items-center justify-center" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
            Export PDF
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Workflow Steps Section -->
  <div class="solid-card overflow-hidden animate-fade-in-up">
    <div class="px-6 py-5 border-b border-slate-200 dark:border-slate-700">
      <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100 tracking-tight">Workflow Steps</h2>
    </div>
    <% if @workflow.steps.present? && @workflow.steps.any? %>
      <div class="p-6 space-y-4">
        <% @workflow.steps.each_with_index do |step, index| %>
          <div class="<%= step['type'] == 'checkpoint' ? 'bg-emerald-50 dark:bg-emerald-900/10 border-emerald-300 dark:border-emerald-700' : 'bg-white dark:bg-slate-800 border-slate-200 dark:border-slate-700' %> border rounded-lg p-4 hover:shadow-lg transition-all duration-200 hover:scale-[1.01] animate-fade-in-up" style="animation-delay: <%= index * 0.05 %>s;" data-controller="image-lightbox">
            <div class="flex items-start justify-between">
              <div class="flex-1 min-w-0">
                <div class="flex items-center mb-2">
                  <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-slate-600 dark:bg-slate-500 text-white text-sm font-semibold mr-3 flex-shrink-0">
                    <%= index + 1 %>
                  </span>
                  <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100"><%= step['title'] %></h3>
                  <span class="ml-3 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= step['type'] == 'checkpoint' ? 'bg-emerald-100 dark:bg-emerald-900/30 text-emerald-800 dark:text-emerald-300' : step['type'] == 'decision' ? 'bg-slate-100 dark:bg-slate-700 text-slate-800 dark:text-slate-300' : step['type'] == 'action' ? 'bg-slate-100 dark:bg-slate-700 text-slate-800 dark:text-slate-300' : 'bg-slate-100 dark:bg-slate-700 text-slate-800 dark:text-slate-300' %>">
                    <%= step['type'] %>
                  </span>
                </div>
                <% if step['description'].present? %>
                  <div class="text-gray-600 dark:text-gray-300 ml-11"><%= render_step_markdown(step['description']) %></div>
                <% end %>
                <% if step['type'] == 'question' && step['question'].present? %>
                  <p class="text-sm text-gray-500 dark:text-gray-400 ml-11 mt-1">Q: <%= step['question'] %></p>
                <% end %>
                <% if step['type'] == 'decision' %>
                  <div class="ml-11 mt-2 text-sm">
                    <p class="text-gray-600 dark:text-gray-300"><strong>Condition:</strong> <%= step['condition'] %></p>
                    <% if step['true_path'].present? %>
                      <p class="text-emerald-600 dark:text-emerald-400 mt-1">True: <%= step['true_path'] %></p>
                    <% end %>
                    <% if step['false_path'].present? %>
                      <p class="text-red-600 dark:text-red-400 mt-1">False: <%= step['false_path'] %></p>
                    <% end %>
                  </div>
                <% end %>
                <% if step['type'] == 'action' && step['instructions'].present? %>
                  <div class="ml-11 mt-2 text-sm text-gray-600 dark:text-gray-300">
                    <strong>Instructions:</strong>
                    <%= render_step_markdown(step['instructions']) %>
                  </div>
                <% end %>
                <% if step['type'] == 'checkpoint' %>
                  <div class="ml-11 mt-2 bg-emerald-50 dark:bg-emerald-900/20 border border-emerald-200 dark:border-emerald-800/30 rounded-lg p-3">
                    <div class="flex items-start">
                      <svg class="w-5 h-5 text-emerald-600 dark:text-emerald-400 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      <div class="flex-1">
                        <p class="text-sm text-emerald-800 dark:text-emerald-300">
                          <strong>Checkpoint:</strong> Users can mark the issue as resolved here to complete the workflow early, or continue to the next step.
                        </p>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="p-12 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <p class="mt-4 text-gray-500 dark:text-gray-400">
          No steps defined yet. <%= link_to "Edit workflow", edit_workflow_path(@workflow), class: "text-slate-600 dark:text-slate-400 hover:text-slate-800 dark:hover:text-slate-300 font-medium" %> to add steps.
        </p>
      </div>
    <% end %>
  </div>

  <!-- Action Button -->
  <div class="mt-6 flex justify-end">
    <% if current_user&.can_edit_workflows? %>
      <%= link_to new_workflow_simulation_path(@workflow), class: "bg-emerald-500 hover:bg-emerald-600 text-white px-6 py-3 rounded-full text-sm font-medium shadow-md hover:shadow-lg transition-all duration-300 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 dark:focus:ring-offset-slate-800 inline-flex items-center" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Run Simulation
      <% end %>
    <% else %>
      <%= link_to start_workflow_path(@workflow), class: "bg-emerald-500 hover:bg-emerald-600 text-white px-6 py-3 rounded-full text-sm font-medium shadow-md hover:shadow-lg transition-all duration-300 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 dark:focus:ring-offset-slate-800 inline-flex items-center" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Start Workflow
      <% end %>
    <% end %>
  </div>
</div>
