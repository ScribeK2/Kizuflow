<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8 animate-fade-in">
    <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-gray-100 tracking-tight">Add Steps</h1>
    <p class="mt-2 text-gray-600 dark:text-gray-400">Step 2 of 3: Build your workflow by adding steps.</p>
  </div>

  <%= render partial: "wizard_progress", locals: { current_step: 2 } %>

  <%= form_with model: @workflow, url: update_step2_workflow_path(@workflow), method: :patch, local: true, data: { turbo: false, controller: "error-highlight" }, class: "animate-fade-in-up" do |form| %>
    <%= render partial: "shared/error_messages", locals: { object: @workflow, container_class: "mb-6", data_controller_target: "error-highlight-target" } %>

    <%# Two-Column Layout: Sidebar + Main Content (Sprint 3) %>
    <div class="flex gap-6">
      <%# Step Outline Sidebar (shown for workflows with >3 steps) %>
      <% if @workflow.steps.present? && @workflow.steps.length > 3 %>
        <div class="hidden lg:block flex-shrink-0 sticky top-24 self-start">
          <%= render partial: "step_outline", locals: { workflow: @workflow } %>
        </div>
      <% end %>
      
      <%# Main Content %>
      <div class="flex-1 min-w-0">
        <div class="solid-card overflow-hidden p-6 space-y-6">
          <div data-controller="workflow-builder" 
               data-workflow-builder-workflow-id-value="<%= @workflow.id %>"
               id="workflow-builder-container">
            
            <%# Header with Add Step Buttons %>
            <div class="flex flex-wrap justify-between items-center gap-4 mb-4">
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-200">
                Workflow Steps
                <% if @workflow.steps.present? %>
                  <span class="ml-2 text-xs text-gray-500 dark:text-gray-400">
                    (<%= @workflow.steps.length %> step<%= @workflow.steps.length != 1 ? 's' : '' %>)
                  </span>
                <% end %>
              </label>
              <div class="flex flex-wrap gap-2">
                <button type="button"
                        data-action="click->workflow-builder#addStepDirect"
                        data-step-type="question"
                        class="inline-flex items-center text-white px-4 py-1.5 rounded-lg text-sm font-medium shadow-md hover:shadow-lg transition-all duration-200"
                        style="background-color: #3b82f6;"
                        onmouseover="this.style.backgroundColor='#2563eb'"
                        onmouseout="this.style.backgroundColor='#3b82f6'">
                  Question
                </button>
                <button type="button"
                        data-action="click->workflow-builder#addStepDirect"
                        data-step-type="decision"
                        class="inline-flex items-center text-white px-4 py-1.5 rounded-lg text-sm font-medium shadow-md hover:shadow-lg transition-all duration-200"
                        style="background-color: #a855f7;"
                        onmouseover="this.style.backgroundColor='#9333ea'"
                        onmouseout="this.style.backgroundColor='#a855f7'">
                  Decision
                </button>
                <button type="button"
                        data-action="click->workflow-builder#addStepDirect"
                        data-step-type="action"
                        class="inline-flex items-center text-white px-4 py-1.5 rounded-lg text-sm font-medium shadow-md hover:shadow-lg transition-all duration-200"
                        style="background-color: #22c55e;"
                        onmouseover="this.style.backgroundColor='#16a34a'"
                        onmouseout="this.style.backgroundColor='#22c55e'">
                  Action
                </button>
                <button type="button"
                        data-action="click->workflow-builder#addStepDirect"
                        data-step-type="checkpoint"
                        class="inline-flex items-center text-white px-4 py-1.5 rounded-lg text-sm font-medium shadow-md hover:shadow-lg transition-all duration-200"
                        style="background-color: #f97316;"
                        onmouseover="this.style.backgroundColor='#ea580c'"
                        onmouseout="this.style.backgroundColor='#f97316'">
                  Checkpoint
                </button>
              </div>
            </div>
            
            <%# Expand/Collapse All Controls (Sprint 2) %>
            <% if @workflow.steps.present? && @workflow.steps.length > 3 %>
              <div class="flex justify-end gap-2 mb-3">
                <button type="button"
                        onclick="document.querySelectorAll('[data-controller*=collapsible-step]').forEach(el => { const c = window.Stimulus?.getControllerForElementAndIdentifier(el, 'collapsible-step'); c?.expand(); })"
                        class="text-xs text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200 underline">
                  Expand all
                </button>
                <span class="text-gray-400">|</span>
                <button type="button"
                        onclick="document.querySelectorAll('[data-controller*=collapsible-step]').forEach(el => { const c = window.Stimulus?.getControllerForElementAndIdentifier(el, 'collapsible-step'); c?.collapse(); })"
                        class="text-xs text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200 underline">
                  Collapse all
                </button>
              </div>
            <% end %>
            
            <%# Steps Container %>
            <div data-workflow-builder-target="container" class="space-y-2 border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-lg p-4 min-h-[200px] bg-white/20 dark:bg-gray-800/20">
              <% if @workflow.steps.present? %>
                <%# Inline step creator at the beginning %>
                <%= render partial: "inline_step_creator", locals: { after_index: -1 } %>
                
                <% @workflow.steps.each_with_index do |step, index| %>
                  <%= render partial: "step_item", locals: { 
                    step: step, 
                    index: index, 
                    workflow: @workflow,
                    expanded: @workflow.steps.length <= 5 || index == @workflow.steps.length - 1
                  } %>
                  
                  <%# Inline step creator after each step %>
                  <%= render partial: "inline_step_creator", locals: { after_index: index } %>
                <% end %>
              <% else %>
                <%# Empty state %>
                <div class="text-center py-12">
                  <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
                  </svg>
                  <h3 class="mt-3 text-lg font-medium text-gray-900 dark:text-gray-100">No steps yet</h3>
                  <p class="mt-1 text-sm text-gray-500 dark:text-gray-400 mb-4">
                    Get started by adding your first step using the buttons above.
                  </p>
                  
                  <%# Quick start buttons in empty state %>
                  <div class="flex flex-wrap justify-center gap-3">
                    <button type="button" 
                            data-action="click->workflow-builder#addStepDirect"
                            data-step-type="question"
                            class="inline-flex items-center px-4 py-2 bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 rounded-lg hover:bg-blue-200 dark:hover:bg-blue-900/50 transition-colors font-medium">
                      Start with a Question
                    </button>
                    <button type="button" 
                            data-action="click->workflow-builder#addStepDirect"
                            data-step-type="action"
                            class="inline-flex items-center px-4 py-2 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300 rounded-lg hover:bg-green-200 dark:hover:bg-green-900/50 transition-colors font-medium">
                      Start with an Action
                    </button>
                  </div>
                </div>
              <% end %>
            </div>
          </div>

          <%# Navigation Buttons %>
          <div class="flex justify-between items-center pt-4 border-t border-gray-200 dark:border-gray-700">
            <%= link_to step1_workflow_path(@workflow), 
                class: "inline-flex items-center gap-2 bg-white/50 dark:bg-gray-800/50 py-2 px-4 border border-slate-200 dark:border-slate-700 rounded-lg shadow-sm text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-white/80 dark:hover:bg-gray-800/80 transition-all duration-200 hover:scale-105" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
              </svg>
              Previous
            <% end %>
            
            <div class="flex items-center gap-3">
              <% if @workflow.steps.present? %>
                <span class="text-sm text-gray-500 dark:text-gray-400">
                  <%= @workflow.steps.length %> step<%= @workflow.steps.length != 1 ? 's' : '' %> added
                </span>
              <% end %>
              
              <%= form.submit "Next: Review â†’", 
                  class: "bg-slate-600 hover:bg-slate-700 text-white px-5 py-2 rounded-lg text-sm font-medium shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 cursor-pointer",
                  data: { 
                    action: "click->step-form#logSubmit",
                    turbo: true
                  } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
