<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8"
     data-controller="workflow-collaboration"
     data-workflow-collaboration-workflow-id-value="<%= @workflow.id %>"
     data-workflow-collaboration-current-user-id-value="<%= current_user.id %>"
     data-workflow-collaboration-container-target="container"
     data-workflow-collaboration-container-value="[data-workflow-builder-target='container']">
  <div class="mb-8 animate-fade-in">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-gray-100 tracking-tight">Edit Workflow</h1>
        <p class="mt-2 text-gray-600 dark:text-gray-400">Modify your workflow steps below.</p>
      </div>
      <div data-workflow-collaboration-target="presence" class="flex items-center space-x-2">
        <!-- Presence indicators will be inserted here -->
      </div>
    </div>
  </div>

  <%= form_with model: @workflow, local: true, class: "glass-card overflow-hidden animate-fade-in-up", 
                data: { controller: "autosave", autosave_workflow_id_value: @workflow.id, autosave_lock_version_value: @workflow.lock_version } do |form| %>
    <%# Hidden field for optimistic locking - prevents race conditions when multiple users edit %>
    <%= form.hidden_field :lock_version %>
    
    <% if @conflict_detected %>
      <div class="mx-6 mt-6 rounded-lg bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-800/30 p-4">
        <div class="flex">
          <svg class="h-5 w-5 text-amber-600 dark:text-amber-400 mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
          <div>
            <h3 class="text-sm font-medium text-amber-800 dark:text-amber-200">
              Workflow Conflict Detected
            </h3>
            <p class="mt-1 text-sm text-amber-700 dark:text-amber-300">
              This workflow was modified by another user while you were editing. The current version is now displayed below. 
              Please review the changes and try your edit again.
            </p>
          </div>
        </div>
      </div>
    <% end %>
    
    <% if @workflow.errors.any? %>
      <div class="mx-6 mt-6 rounded-lg bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800/30 p-4">
        <div class="flex">
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800 dark:text-red-200">
              <%= pluralize(@workflow.errors.count, "error") %> prohibited this workflow from being saved:
            </h3>
            <div class="mt-2 text-sm text-red-700 dark:text-red-300">
              <ul class="list-disc pl-5 space-y-1">
                <% @workflow.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="p-6 space-y-6">
      <div>
        <%= form.label :title, class: "block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1" %>
        <%= form.text_field :title, class: "mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm py-2 px-3 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-400 dark:placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 focus:border-blue-500 dark:focus:border-blue-400 transition-colors" %>
      </div>

      <div>
        <%= form.label :description, class: "block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1" %>
        <%= form.rich_text_area :description, id: "workflow_description_#{@workflow.id}", class: "mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm py-2 px-3 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 focus:border-blue-500 dark:focus:border-blue-400" %>
      </div>

      <% if @accessible_groups&.any? %>
        <%= render partial: "workflows/group_selector", locals: { selected_group_ids: @selected_group_ids || [] } %>
      <% end %>

      <% if current_user&.can_edit_workflows? %>
        <div class="flex items-center">
          <%= form.check_box :is_public, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
          <%= form.label :is_public, "Make this workflow public (visible to all users)", class: "ml-2 block text-sm text-gray-700 dark:text-gray-300" %>
        </div>
        <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
          Public workflows can be viewed and simulated by all users, but only you (or admins) can edit them.
        </p>
      <% end %>

      <% if @workflow.steps&.any? { |s| s['_import_incomplete'] } %>
        <div class="bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800/30 rounded-lg p-4">
          <div class="flex items-start">
            <svg class="w-5 h-5 text-yellow-600 dark:text-yellow-400 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <div>
              <h3 class="text-sm font-medium text-yellow-800 dark:text-yellow-200">
                This workflow was imported with incomplete steps
              </h3>
              <p class="mt-1 text-sm text-yellow-700 dark:text-yellow-300">
                Please review and complete the steps marked as "Incomplete" below. Each incomplete step shows what information is missing.
              </p>
            </div>
          </div>
        </div>
      <% end %>

      <%# Two-Column Layout: Sidebar + Main Content (Sprint 3) %>
      <% has_sidebar = @workflow.steps.present? && @workflow.steps.length > 3 %>
      <div style="display: grid; grid-template-columns: <%= has_sidebar ? '280px 1fr' : '1fr' %>; gap: 1.5rem; width: 100%;">
        <%# Step Outline Sidebar (shown for workflows with >3 steps) %>
        <% if has_sidebar %>
          <div style="position: sticky; top: 6rem; align-self: start; max-height: calc(100vh - 8rem); overflow-y: auto;">
            <%= render partial: "step_outline", locals: { workflow: @workflow } %>
          </div>
        <% end %>
        
        <%# Main Steps Section %>
        <div style="min-width: 0;">
          <div data-controller="workflow-builder" 
               data-workflow-builder-workflow-id-value="<%= @workflow.id %>"
               id="workflow-builder-container">
            
            <%# Header with Add Step Buttons %>
            <div class="flex flex-wrap justify-between items-center gap-4 mb-4">
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-200">
                Workflow Steps
                <% if @workflow.steps.present? %>
                  <span class="ml-2 text-xs text-gray-500 dark:text-gray-400">
                    (<%= @workflow.steps.length %> step<%= @workflow.steps.length != 1 ? 's' : '' %>)
                  </span>
                <% end %>
              </label>
              <div class="flex flex-wrap gap-2">
                <button type="button" 
                        data-action="click->workflow-builder#addStepDirect"
                        data-step-type="question"
                        class="inline-flex items-center text-white px-4 py-1.5 rounded-lg text-sm font-medium shadow-md hover:shadow-lg transition-all duration-200"
                        style="background-color: #3b82f6;"
                        onmouseover="this.style.backgroundColor='#2563eb'"
                        onmouseout="this.style.backgroundColor='#3b82f6'">
                  Question
                </button>
                <button type="button" 
                        data-action="click->workflow-builder#addStepDirect"
                        data-step-type="decision"
                        class="inline-flex items-center text-white px-4 py-1.5 rounded-lg text-sm font-medium shadow-md hover:shadow-lg transition-all duration-200"
                        style="background-color: #a855f7;"
                        onmouseover="this.style.backgroundColor='#9333ea'"
                        onmouseout="this.style.backgroundColor='#a855f7'">
                  Decision
                </button>
                <button type="button" 
                        data-action="click->workflow-builder#addStepDirect"
                        data-step-type="action"
                        class="inline-flex items-center text-white px-4 py-1.5 rounded-lg text-sm font-medium shadow-md hover:shadow-lg transition-all duration-200"
                        style="background-color: #22c55e;"
                        onmouseover="this.style.backgroundColor='#16a34a'"
                        onmouseout="this.style.backgroundColor='#22c55e'">
                  Action
                </button>
                <button type="button" 
                        data-action="click->workflow-builder#addStepDirect"
                        data-step-type="checkpoint"
                        class="inline-flex items-center text-white px-4 py-1.5 rounded-lg text-sm font-medium shadow-md hover:shadow-lg transition-all duration-200"
                        style="background-color: #f97316;"
                        onmouseover="this.style.backgroundColor='#ea580c'"
                        onmouseout="this.style.backgroundColor='#f97316'">
                  Checkpoint
                </button>
              </div>
            </div>
            
            <%# Expand/Collapse All Controls (Sprint 2) %>
            <% if @workflow.steps.present? && @workflow.steps.length > 3 %>
              <div class="flex justify-end gap-2 mb-3">
                <button type="button"
                        onclick="document.querySelectorAll('[data-controller*=collapsible-step]').forEach(el => { const c = window.Stimulus?.getControllerForElementAndIdentifier(el, 'collapsible-step'); c?.expand(); })"
                        class="text-xs text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200 underline">
                  Expand all
                </button>
                <span class="text-gray-400">|</span>
                <button type="button"
                        onclick="document.querySelectorAll('[data-controller*=collapsible-step]').forEach(el => { const c = window.Stimulus?.getControllerForElementAndIdentifier(el, 'collapsible-step'); c?.collapse(); })"
                        class="text-xs text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200 underline">
                  Collapse all
                </button>
              </div>
            <% end %>
            
            <%# Steps Container %>
            <div data-workflow-builder-target="container" class="space-y-2 border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-lg p-4 min-h-[200px] bg-white/20 dark:bg-gray-800/20">
              <% if @workflow.steps.present? %>
                <%# Inline step creator at the beginning %>
                <%= render partial: "inline_step_creator", locals: { after_index: -1 } %>
                
                <% @workflow.steps.each_with_index do |step, index| %>
                  <%= render partial: "step_item", locals: { 
                    step: step, 
                    index: index, 
                    workflow: @workflow,
                    expanded: @workflow.steps.length <= 5 || index == @workflow.steps.length - 1
                  } %>
                  
                  <%# Inline step creator after each step %>
                  <%= render partial: "inline_step_creator", locals: { after_index: index } %>
                <% end %>
              <% else %>
                <%# Empty state %>
                <div class="text-center py-12">
                  <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
                  </svg>
                  <h3 class="mt-3 text-lg font-medium text-gray-900 dark:text-gray-100">No steps yet</h3>
                  <p class="mt-1 text-sm text-gray-500 dark:text-gray-400 mb-4">
                    Get started by adding your first step using the buttons above.
                  </p>
                  
                  <%# Quick start buttons in empty state %>
                  <div class="flex flex-wrap justify-center gap-3">
                    <button type="button" 
                            data-action="click->workflow-builder#addStepDirect"
                            data-step-type="question"
                            class="inline-flex items-center px-4 py-2 bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 rounded-lg hover:bg-blue-200 dark:hover:bg-blue-900/50 transition-colors font-medium">
                      Start with a Question
                    </button>
                    <button type="button" 
                            data-action="click->workflow-builder#addStepDirect"
                            data-step-type="action"
                            class="inline-flex items-center px-4 py-2 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300 rounded-lg hover:bg-green-200 dark:hover:bg-green-900/50 transition-colors font-medium">
                      Start with an Action
                    </button>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div data-controller="flow-preview" class="mt-6">
        <%= render partial: "flow_preview" %>
      </div>

      <div class="flex justify-between items-center space-x-3">
        <div data-autosave-target="status" class="text-sm font-medium text-gray-600 dark:text-gray-400">
          Ready to save
        </div>
        <div class="flex space-x-3">
          <%= link_to "Cancel", workflow_path(@workflow), class: "bg-white/50 dark:bg-gray-800/50 py-2 px-4 border border-white/20 dark:border-gray-700/30 rounded-lg shadow-sm text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-white/80 dark:hover:bg-gray-800/80 transition-all duration-200 hover:scale-105" %>
          <button type="button" 
                  onclick="document.getElementById('save-template-modal').classList.remove('hidden')"
                  class="bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white px-4 py-2 rounded-lg text-sm font-medium shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
            Save as Template
          </button>
          <%= form.submit "Update Workflow", class: "bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 text-white px-4 py-2 rounded-lg text-sm font-medium shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%# Conflict Resolution Modal (for real-time autosave conflicts) %>
<div id="conflict-modal"
     class="hidden fixed inset-0 z-50 overflow-y-auto"
     data-autosave-target="conflictModal">
  <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:block sm:p-0">
    <%# Backdrop %>
    <div class="fixed inset-0 bg-black/60 backdrop-blur-sm transition-opacity"></div>

    <%# Center modal %>
    <span class="hidden sm:inline-block sm:align-middle sm:h-screen">&#8203;</span>

    <%# Modal panel %>
    <div class="inline-block align-bottom bg-white dark:bg-gray-800 rounded-xl text-left overflow-hidden shadow-2xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full border border-amber-200 dark:border-amber-800/30">
      <div class="bg-amber-50 dark:bg-amber-900/20 px-6 py-4 border-b border-amber-200 dark:border-amber-800/30">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-8 w-8 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-bold text-amber-800 dark:text-amber-200">
              Editing Conflict Detected
            </h3>
            <p class="mt-1 text-sm text-amber-700 dark:text-amber-300" data-conflict-message>
              Another user has modified this workflow while you were editing.
            </p>
          </div>
        </div>
      </div>

      <div class="px-6 py-4">
        <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
          <strong data-conflict-user class="text-gray-900 dark:text-gray-100">Another user</strong> 
          saved changes to this workflow. Your local changes may conflict with their updates.
        </p>
        
        <div class="bg-gray-100 dark:bg-gray-700/50 rounded-lg p-4 mb-4">
          <h4 class="text-sm font-medium text-gray-900 dark:text-gray-100 mb-2">Your options:</h4>
          <ul class="text-sm text-gray-600 dark:text-gray-400 space-y-2">
            <li class="flex items-start">
              <span class="text-blue-500 mr-2">•</span>
              <span><strong>Refresh</strong> - Load the latest version (your unsaved changes will be lost)</span>
            </li>
            <li class="flex items-start">
              <span class="text-amber-500 mr-2">•</span>
              <span><strong>Force Save</strong> - Overwrite with your changes (other user's changes will be lost)</span>
            </li>
            <li class="flex items-start">
              <span class="text-gray-500 mr-2">•</span>
              <span><strong>Dismiss</strong> - Continue editing (your next save will include current server version)</span>
            </li>
          </ul>
        </div>
      </div>

      <div class="bg-gray-50 dark:bg-gray-900/50 px-6 py-4 flex justify-end space-x-3 border-t border-gray-200 dark:border-gray-700">
        <button type="button"
                data-action="click->autosave#dismissConflict"
                class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors">
          Dismiss
        </button>
        <button type="button"
                data-action="click->autosave#forceSave"
                class="px-4 py-2 text-sm font-medium text-amber-700 dark:text-amber-300 bg-amber-100 dark:bg-amber-900/30 border border-amber-300 dark:border-amber-800 rounded-lg hover:bg-amber-200 dark:hover:bg-amber-900/50 transition-colors">
          Force Save
        </button>
        <button type="button"
                data-action="click->autosave#refreshPage"
                class="px-4 py-2 text-sm font-medium text-white bg-blue-600 dark:bg-blue-500 rounded-lg hover:bg-blue-700 dark:hover:bg-blue-600 transition-colors shadow-sm">
          Refresh Page
        </button>
      </div>
    </div>
  </div>
</div>

<%# Save as Template Modal %>
<div id="save-template-modal" 
     class="hidden fixed inset-0 z-50 overflow-y-auto"
     data-controller="modal"
     data-modal-target="backdrop"
     data-action="click->modal#backdropClick">
  <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:block sm:p-0">
    <%# Backdrop %>
    <div class="fixed inset-0 bg-black/50 backdrop-blur-sm transition-opacity" data-modal-target="backdrop"></div>

    <%# Center modal %>
    <span class="hidden sm:inline-block sm:align-middle sm:h-screen">&#8203;</span>

    <%# Modal panel %>
    <div class="glass-modal inline-block align-bottom text-left overflow-hidden transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full animate-scale-in"
         data-modal-target="content">
      <%= form_with url: save_as_template_workflow_path(@workflow), method: :post, local: true, class: "px-4 pt-5 pb-4 sm:p-6 sm:pb-4" do |form| %>
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100">Save as Template</h3>
          <button type="button" 
                  onclick="document.getElementById('save-template-modal').classList.add('hidden')"
                  class="text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 transition-colors duration-200 hover:scale-110">
            <span class="sr-only">Close</span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <div class="space-y-4">
          <div>
            <label for="template_name" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Template Name</label>
            <%= text_field_tag "template[name]", @workflow.title, id: "template_name", class: "mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm py-2 px-3 bg-white/50 dark:bg-gray-800/50 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 focus:border-blue-500 dark:focus:border-blue-400", required: true %>
          </div>

          <div>
            <label for="template_category" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Category</label>
            <%= select_tag "template[category]", 
                options_for_select([
                  ["Post-Onboarding", "post-onboarding"],
                  ["Troubleshooting", "troubleshooting"],
                  ["Training", "training"],
                  ["Custom", "custom"],
                  ["Other", "other"]
                ], "custom"),
                { id: "template_category", class: "mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm py-2 px-3 bg-white/50 dark:bg-gray-800/50 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 focus:border-blue-500 dark:focus:border-blue-400", required: true } %>
          </div>

          <div>
            <label for="template_description" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Description</label>
            <%= text_area_tag "template[description]", @workflow.description_text, id: "template_description", rows: 3, class: "mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm py-2 px-3 bg-white/50 dark:bg-gray-800/50 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 focus:border-blue-500 dark:focus:border-blue-400" %>
          </div>

          <div class="flex items-center">
            <%= hidden_field_tag "template[is_public]", "false" %>
            <%= check_box_tag "template[is_public]", "true", true, id: "template_is_public", class: "rounded border-gray-300 dark:border-gray-600 text-blue-600 dark:text-blue-400 focus:ring-blue-500 dark:focus:ring-blue-400 bg-white/50 dark:bg-gray-800/50" %>
            <label for="template_is_public" class="ml-2 block text-sm text-gray-700 dark:text-gray-300">Make this template public</label>
          </div>
        </div>

        <div class="mt-6 flex justify-end space-x-3">
          <button type="button" 
                  onclick="document.getElementById('save-template-modal').classList.add('hidden')"
                  class="bg-white/50 dark:bg-gray-800/50 hover:bg-white/80 dark:hover:bg-gray-800/80 text-gray-700 dark:text-gray-300 px-4 py-2 rounded-lg text-sm font-medium border border-white/20 dark:border-gray-700/30 transition-all duration-200 hover:scale-105">
            Cancel
          </button>
          <%= form.submit "Save Template", class: "bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 text-white px-4 py-2 rounded-lg text-sm font-medium shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

