<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8 animate-fade-in">
    <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-gray-100 tracking-tight">Edit Workflow</h1>
    <p class="mt-2 text-gray-600 dark:text-gray-400">Modify your workflow steps below.</p>
  </div>

  <%= form_with model: @workflow, local: true, class: "glass-card overflow-hidden animate-fade-in-up", 
                data: { controller: "autosave", autosave_workflow_id_value: @workflow.id } do |form| %>
    <% if @workflow.errors.any? %>
      <div class="mx-6 mt-6 rounded-lg bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800/30 p-4">
        <div class="flex">
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800 dark:text-red-200">
              <%= pluralize(@workflow.errors.count, "error") %> prohibited this workflow from being saved:
            </h3>
            <div class="mt-2 text-sm text-red-700 dark:text-red-300">
              <ul class="list-disc pl-5 space-y-1">
                <% @workflow.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="p-6 space-y-6">
      <div>
        <%= form.label :title, class: "block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1" %>
        <%= form.text_field :title, class: "mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm py-2 px-3 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-400 dark:placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 focus:border-blue-500 dark:focus:border-blue-400 transition-colors" %>
      </div>

      <div>
        <%= form.label :description, class: "block text-sm font-medium text-gray-700 dark:text-gray-200 mb-1" %>
        <%= form.rich_text_area :description, id: "workflow_description_#{@workflow.id}", class: "mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm py-2 px-3 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 focus:border-blue-500 dark:focus:border-blue-400" %>
      </div>

      <div data-controller="workflow-builder">
        <div class="flex justify-between items-center mb-4">
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-200">Workflow Steps</label>
          <div class="flex space-x-2">
            <button type="button" data-action="click->workflow-builder#addStep" data-workflow-builder-type-param="question" class="bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 text-white px-3 py-1 rounded-lg text-sm shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">Add Question</button>
            <button type="button" data-action="click->workflow-builder#addStep" data-workflow-builder-type-param="decision" class="bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white px-3 py-1 rounded-lg text-sm shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">Add Decision</button>
            <button type="button" data-action="click->workflow-builder#addStep" data-workflow-builder-type-param="action" class="bg-gradient-to-r from-purple-500 to-pink-600 hover:from-purple-600 hover:to-pink-700 text-white px-3 py-1 rounded-lg text-sm shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">Add Action</button>
          </div>
        </div>
        <div data-workflow-builder-target="container" class="space-y-4 border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-lg p-4 min-h-[200px] bg-white/20 dark:bg-gray-800/20">
          <% if @workflow.steps.present? %>
            <% @workflow.steps.each_with_index do |step, index| %>
              <div class="step-item border rounded p-4 mb-4" 
                   data-step-index="<%= index %>"
                   data-controller="step-form"
                   data-step-form-step-type-value="<%= step['type'] %>"
                   data-step-form-step-index-value="<%= index %>">
                <div class="flex items-center justify-between mb-2">
                  <span class="drag-handle cursor-move text-gray-500">â˜°</span>
                  <button type="button" data-action="click->workflow-builder#removeStep" class="text-red-500 hover:text-red-700">Remove</button>
                </div>
                <input type="hidden" name="workflow[steps][][index]" value="<%= index %>">
                <input type="hidden" name="workflow[steps][][type]" value="<%= step['type'] %>">
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4" 
                     data-controller="preview-updater"
                     data-preview-updater-url-value="<%= preview_workflow_path(@workflow) %>"
                     data-preview-updater-index-value="<%= index %>">
                  <div class="space-y-2 min-w-0">
                    <div class="field-container">
                      <input type="text" 
                             name="workflow[steps][][title]" 
                             value="<%= step['title'] %>" 
                             placeholder="Step title" 
                             class="w-full border rounded px-3 py-2" 
                             required
                             data-step-form-target="field">
                    </div>
                    <div class="field-container">
                      <textarea name="workflow[steps][][description]" 
                                placeholder="Step description" 
                                class="w-full border rounded px-3 py-2" 
                                rows="2"
                                data-step-form-target="field"><%= step['description'] %></textarea>
                    </div>
                    <%= render partial: "step_fields", locals: { step: step, step_type: step['type'], available_steps: @workflow.steps, step_index: index, workflow: @workflow } %>
                  </div>
                  
                  <div class="min-w-0">
                    <%= turbo_frame_tag "step_preview_#{index}", data: { preview_updater_target: "previewFrame" } do %>
                      <%= render partial: "preview_pane", locals: { step: step, index: index } %>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>

      <div data-controller="flow-preview">
        <%= render partial: "flow_preview" %>
      </div>

      <%# Include step templates data for JavaScript %>
      <script type="application/json" id="step-templates-data">
        {
          "question": <%= StepTemplate.all_for_type(:question).to_json.html_safe %>,
          "decision": <%= StepTemplate.all_for_type(:decision).to_json.html_safe %>,
          "action": <%= StepTemplate.all_for_type(:action).to_json.html_safe %>
        }
      </script>

      <div class="flex justify-between items-center space-x-3">
        <div data-autosave-target="status" class="text-sm font-medium text-gray-600 dark:text-gray-400">
          Ready to save
        </div>
        <div class="flex space-x-3">
          <%= link_to "Cancel", workflow_path(@workflow), class: "bg-white/50 dark:bg-gray-800/50 py-2 px-4 border border-white/20 dark:border-gray-700/30 rounded-lg shadow-sm text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-white/80 dark:hover:bg-gray-800/80 transition-all duration-200 hover:scale-105" %>
          <button type="button" 
                  onclick="document.getElementById('save-template-modal').classList.remove('hidden')"
                  class="bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white px-4 py-2 rounded-lg text-sm font-medium shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
            Save as Template
          </button>
          <%= form.submit "Update Workflow", class: "bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 text-white px-4 py-2 rounded-lg text-sm font-medium shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%# Save as Template Modal %>
<div id="save-template-modal" 
     class="hidden fixed inset-0 z-50 overflow-y-auto"
     data-controller="modal"
     data-modal-target="backdrop"
     data-action="click->modal#backdropClick">
  <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:block sm:p-0">
    <%# Backdrop %>
    <div class="fixed inset-0 bg-black/50 backdrop-blur-sm transition-opacity" data-modal-target="backdrop"></div>

    <%# Center modal %>
    <span class="hidden sm:inline-block sm:align-middle sm:h-screen">&#8203;</span>

    <%# Modal panel %>
    <div class="glass-modal inline-block align-bottom text-left overflow-hidden transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full animate-scale-in"
         data-modal-target="content">
      <%= form_with url: save_as_template_workflow_path(@workflow), method: :post, local: true, class: "px-4 pt-5 pb-4 sm:p-6 sm:pb-4" do |form| %>
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100">Save as Template</h3>
          <button type="button" 
                  onclick="document.getElementById('save-template-modal').classList.add('hidden')"
                  class="text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 transition-colors duration-200 hover:scale-110">
            <span class="sr-only">Close</span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <div class="space-y-4">
          <div>
            <label for="template_name" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Template Name</label>
            <%= text_field_tag "template[name]", @workflow.title, id: "template_name", class: "mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm py-2 px-3 bg-white/50 dark:bg-gray-800/50 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 focus:border-blue-500 dark:focus:border-blue-400", required: true %>
          </div>

          <div>
            <label for="template_category" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Category</label>
            <%= select_tag "template[category]", 
                options_for_select([
                  ["Post-Onboarding", "post-onboarding"],
                  ["Troubleshooting", "troubleshooting"],
                  ["Training", "training"],
                  ["Custom", "custom"],
                  ["Other", "other"]
                ], "custom"),
                { id: "template_category", class: "mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm py-2 px-3 bg-white/50 dark:bg-gray-800/50 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 focus:border-blue-500 dark:focus:border-blue-400", required: true } %>
          </div>

          <div>
            <label for="template_description" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Description</label>
            <%= text_area_tag "template[description]", @workflow.description_text, id: "template_description", rows: 3, class: "mt-1 block w-full border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm py-2 px-3 bg-white/50 dark:bg-gray-800/50 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 focus:border-blue-500 dark:focus:border-blue-400" %>
          </div>

          <div class="flex items-center">
            <%= hidden_field_tag "template[is_public]", "false" %>
            <%= check_box_tag "template[is_public]", "true", true, id: "template_is_public", class: "rounded border-gray-300 dark:border-gray-600 text-blue-600 dark:text-blue-400 focus:ring-blue-500 dark:focus:ring-blue-400 bg-white/50 dark:bg-gray-800/50" %>
            <label for="template_is_public" class="ml-2 block text-sm text-gray-700 dark:text-gray-300">Make this template public</label>
          </div>
        </div>

        <div class="mt-6 flex justify-end space-x-3">
          <button type="button" 
                  onclick="document.getElementById('save-template-modal').classList.add('hidden')"
                  class="bg-white/50 dark:bg-gray-800/50 hover:bg-white/80 dark:hover:bg-gray-800/80 text-gray-700 dark:text-gray-300 px-4 py-2 rounded-lg text-sm font-medium border border-white/20 dark:border-gray-700/30 transition-all duration-200 hover:scale-105">
            Cancel
          </button>
          <%= form.submit "Save Template", class: "bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 text-white px-4 py-2 rounded-lg text-sm font-medium shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

