<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header Section -->
  <div class="mb-12 animate-fade-in">
    <h1 class="text-4xl md:text-5xl font-bold tracking-tight bg-gradient-to-r from-blue-600 via-purple-600 to-blue-600 bg-clip-text text-transparent dark:from-blue-400 dark:via-purple-400 dark:to-blue-400">
      Dashboard
    </h1>
    <p class="mt-4 text-lg text-gray-600 dark:text-gray-400">
      Welcome back! Here's an overview of your workflows.
    </p>
  </div>

  <!-- Stats Cards Grid -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
    <!-- Total Workflows Card -->
    <%= render_card title: "Total Workflows",
      icon: '<svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>',
      with_3d: true do %>
      <div class="flex items-center justify-between">
        <div>
          <p class="text-3xl font-bold text-gray-900 dark:text-gray-100"><%= @workflow_count %></p>
          <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Active workflows</p>
        </div>
        <div class="text-blue-600 dark:text-blue-400 opacity-80">
          <svg class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
      </div>
    <% end %>

    <!-- Quick Actions Card -->
    <% if current_user&.can_create_workflows? %>
      <%= render_card title: "Quick Actions",
        icon: '<svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" /></svg>',
        with_3d: true do %>
        <div class="flex items-center justify-between">
          <div>
            <p class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-3">Get started</p>
            <%= link_to new_workflow_path, class: "inline-flex items-center px-4 py-2 bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 text-white rounded-lg text-sm font-medium shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              Create Workflow
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>

    <!-- Templates Card -->
    <%= render_card title: "Browse Templates",
      icon: '<svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>',
      with_3d: true do %>
      <div class="flex items-center justify-between">
        <div>
          <p class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-3">Start from a template</p>
          <%= link_to templates_path, class: "inline-flex items-center px-4 py-2 bg-gradient-to-r from-purple-500 to-pink-600 hover:from-purple-600 hover:to-pink-700 text-white rounded-lg text-sm font-medium shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
            View Templates
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Recent Workflows Section -->
  <div class="glass-card overflow-hidden animate-fade-in-up" style="animation-delay: 0.2s;">
    <div class="px-6 py-5 border-b border-white/20 dark:border-gray-700/30">
      <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100 tracking-tight">Recent Workflows</h3>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Your most recently created workflows</p>
    </div>
    <div class="divide-y divide-white/20 dark:divide-gray-700/30">
      <% if @workflows.any? %>
        <% @workflows.each_with_index do |workflow, index| %>
          <div class="px-6 py-4 hover:bg-white/20 dark:hover:bg-gray-800/20 transition-colors duration-200 animate-fade-in-up" style="animation-delay: <%= index * 0.05 %>s;">
            <div class="flex items-center justify-between">
              <div class="flex items-center flex-1 min-w-0">
                <div class="flex-shrink-0 mr-4">
                  <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                  </div>
                </div>
                <div class="flex-1 min-w-0">
                  <div class="text-base font-semibold text-gray-900 dark:text-gray-100 mb-1">
                    <%= link_to workflow.title, workflow_path(workflow), class: "hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-200" %>
                  </div>
                  <div class="text-sm text-gray-500 dark:text-gray-400">
                    Created <%= time_ago_in_words(workflow.created_at) %> ago
                  </div>
                </div>
              </div>
              <div class="flex items-center space-x-3 ml-4">
                <%= link_to workflow_path(workflow), class: "px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white/50 dark:bg-gray-800/50 rounded-lg hover:bg-white/80 dark:hover:bg-gray-800/80 transition-all duration-200 hover:scale-105" do %>
                  View
                <% end %>
                <% if workflow.can_be_edited_by?(current_user) %>
                  <%= link_to edit_workflow_path(workflow), class: "px-4 py-2 text-sm font-medium text-blue-600 dark:text-blue-400 bg-blue-50/50 dark:bg-blue-900/20 rounded-lg hover:bg-blue-50/80 dark:hover:bg-blue-900/40 transition-all duration-200 hover:scale-105" do %>
                    Edit
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="px-6 py-12 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <h3 class="mt-4 text-lg font-medium text-gray-900 dark:text-gray-100">No workflows yet</h3>
          <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
            <% if current_user&.can_create_workflows? %>
              <%= link_to "Create your first workflow", new_workflow_path, class: "text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 font-medium" %>
            <% else %>
              Browse public workflows or templates to get started.
            <% end %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>

