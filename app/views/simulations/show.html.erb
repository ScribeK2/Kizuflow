<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8 animate-fade-in">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-gray-100 tracking-tight">Simulation Results</h1>
        <p class="mt-2 text-gray-600 dark:text-gray-400">Execution path and results for <%= @workflow.title %></p>
      </div>
      <% if @simulation.stopped? %>
        <div class="inline-flex items-center px-4 py-2 rounded-lg bg-orange-100 dark:bg-orange-900/30 border border-orange-200 dark:border-orange-800/30">
          <svg class="w-5 h-5 mr-2 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
          <span class="text-sm font-semibold text-orange-800 dark:text-orange-300">Workflow Stopped</span>
        </div>
      <% elsif @simulation.complete? %>
        <div class="inline-flex items-center px-4 py-2 rounded-lg bg-green-100 dark:bg-green-900/30 border border-green-200 dark:border-green-800/30">
          <svg class="w-5 h-5 mr-2 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <span class="text-sm font-semibold text-green-800 dark:text-green-300">Completed</span>
        </div>
      <% else %>
        <div class="inline-flex items-center px-4 py-2 rounded-lg bg-blue-100 dark:bg-blue-900/30 border border-blue-200 dark:border-blue-800/30">
          <svg class="w-5 h-5 mr-2 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="text-sm font-semibold text-blue-800 dark:text-blue-300">In Progress</span>
        </div>
      <% end %>
    </div>
  </div>

  <% if @simulation.stopped? %>
    <div class="solid-card overflow-hidden mb-6 animate-fade-in-up border-l-4 border-orange-500 dark:border-orange-400">
      <div class="px-6 py-5">
        <div class="flex items-start">
          <svg class="w-6 h-6 text-orange-600 dark:text-orange-400 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
          <div class="flex-1">
            <h3 class="text-lg font-semibold text-orange-900 dark:text-orange-200 mb-2">Workflow Stopped</h3>
            <p class="text-orange-800 dark:text-orange-300 mb-2">
              This workflow was stopped before completion.
              <% if @simulation.stopped_at_step_index.present? %>
                It was stopped at step <%= @simulation.stopped_at_step_index + 1 %>.
              <% end %>
            </p>
            <p class="text-sm text-orange-700 dark:text-orange-400">
              Stopped on <%= @simulation.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
            </p>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="solid-card overflow-hidden mb-6 animate-fade-in-up">
    <div class="px-6 py-5 border-b border-slate-200 dark:border-slate-700">
      <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100 tracking-tight">Execution Path</h2>
    </div>
    <% if @simulation.execution_path.present? && @simulation.execution_path.any? %>
      <div class="p-6 space-y-4">
        <% @simulation.execution_path.each_with_index do |path_item, index| %>
          <div class="border-l-4 border-blue-500 dark:border-blue-400 pl-4 py-2 backdrop-blur-sm bg-white/30 dark:bg-gray-800/30 rounded-r-lg animate-fade-in-up" style="animation-delay: <%= index * 0.05 %>s;">
            <div class="flex items-center mb-2">
              <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-slate-600 text-white text-sm font-semibold mr-3">
                <%= index + 1 %>
              </span>
              <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100"><%= path_item['step_title'] %></h3>
              <span class="ml-3 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= path_item['step_type'] == 'checkpoint' ? 'bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300' : path_item['step_type'] == 'decision' ? 'bg-purple-100 dark:bg-purple-900/30 text-purple-800 dark:text-purple-300' : path_item['step_type'] == 'action' ? 'bg-pink-100 dark:bg-pink-900/30 text-pink-800 dark:text-pink-300' : 'bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300' %>">
                <%= path_item['step_type'] %>
              </span>
            </div>
            <% if path_item['answer'].present? %>
              <p class="text-gray-600 dark:text-gray-300 ml-11"><strong>Answer:</strong> <%= path_item['answer'] %></p>
            <% end %>
            <% if path_item['condition_result'].present? %>
              <p class="text-gray-600 dark:text-gray-300 ml-11">
                <strong>Condition Result:</strong> 
                <span class="<%= path_item['condition_result'] ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400' %>">
                  <%= path_item['condition_result'] ? 'True' : 'False' %>
                </span>
              </p>
            <% end %>
            <% if path_item['action_completed'].present? %>
              <p class="text-green-600 dark:text-green-400 ml-11">✓ Action completed</p>
            <% end %>
            <% if path_item['step_type'] == 'checkpoint' %>
              <% if path_item['resolved'] == true %>
                <p class="text-green-600 dark:text-green-400 ml-11">✓ Issue resolved - workflow completed</p>
              <% else %>
                <p class="text-blue-600 dark:text-blue-400 ml-11">→ Issue not resolved - workflow continued</p>
              <% end %>
              <% if path_item['notes'].present? %>
                <p class="text-gray-600 dark:text-gray-300 ml-11 mt-1 italic">Notes: <%= path_item['notes'] %></p>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="p-12 text-center">
        <p class="text-gray-500 dark:text-gray-400">No execution path recorded.</p>
      </div>
    <% end %>
  </div>

  <div class="solid-card overflow-hidden animate-fade-in-up" style="animation-delay: 0.1s;">
    <div class="px-6 py-5 border-b border-slate-200 dark:border-slate-700">
      <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100 tracking-tight">Results Summary</h2>
    </div>
    <% if @simulation.results.present? %>
      <div class="p-6">
        <%# Display escalation info if present %>
        <% if @simulation.results['_escalation'].present? %>
          <% escalation = @simulation.results['_escalation'] %>
          <div class="mb-6 p-4 rounded-lg bg-orange-50 dark:bg-orange-900/20 border border-orange-200 dark:border-orange-800/30">
            <div class="flex items-start">
              <svg class="w-5 h-5 text-orange-600 dark:text-orange-400 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11l5-5m0 0l5 5m-5-5v12" />
              </svg>
              <div class="flex-1">
                <h3 class="text-sm font-semibold text-orange-900 dark:text-orange-200 mb-2">Escalation Details</h3>
                <dl class="space-y-1 text-sm">
                  <% if escalation['type'].present? %>
                    <div class="flex">
                      <dt class="font-medium text-orange-700 dark:text-orange-300 w-24">Target:</dt>
                      <dd class="text-orange-800 dark:text-orange-200"><%= escalation['type']&.titleize %><%= " - #{escalation['value']}" if escalation['value'].present? %></dd>
                    </div>
                  <% end %>
                  <% if escalation['priority'].present? && escalation['priority'] != 'normal' %>
                    <div class="flex">
                      <dt class="font-medium text-orange-700 dark:text-orange-300 w-24">Priority:</dt>
                      <dd class="<%= escalation['priority'] == 'urgent' ? 'text-red-600 dark:text-red-400 font-semibold' : escalation['priority'] == 'high' ? 'text-orange-600 dark:text-orange-400 font-medium' : 'text-orange-800 dark:text-orange-200' %>"><%= escalation['priority']&.titleize %></dd>
                    </div>
                  <% end %>
                  <% if escalation['notes'].present? %>
                    <div class="flex">
                      <dt class="font-medium text-orange-700 dark:text-orange-300 w-24">Notes:</dt>
                      <dd class="text-orange-800 dark:text-orange-200"><%= escalation['notes'] %></dd>
                    </div>
                  <% end %>
                </dl>
              </div>
            </div>
          </div>
        <% end %>

        <%# Display resolution info if present %>
        <% if @simulation.results['_resolution'].present? %>
          <% resolution = @simulation.results['_resolution'] %>
          <div class="mb-6 p-4 rounded-lg bg-emerald-50 dark:bg-emerald-900/20 border border-emerald-200 dark:border-emerald-800/30">
            <div class="flex items-start">
              <svg class="w-5 h-5 text-emerald-600 dark:text-emerald-400 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <div class="flex-1">
                <h3 class="text-sm font-semibold text-emerald-900 dark:text-emerald-200 mb-2">Resolution Details</h3>
                <dl class="space-y-1 text-sm">
                  <% if resolution['type'].present? %>
                    <div class="flex">
                      <dt class="font-medium text-emerald-700 dark:text-emerald-300 w-24">Type:</dt>
                      <dd class="<%= resolution['type'] == 'success' ? 'text-green-600 dark:text-green-400' : resolution['type'] == 'failure' ? 'text-red-600 dark:text-red-400' : 'text-emerald-800 dark:text-emerald-200' %>"><%= resolution['type']&.titleize %></dd>
                    </div>
                  <% end %>
                  <% if resolution['code'].present? %>
                    <div class="flex">
                      <dt class="font-medium text-emerald-700 dark:text-emerald-300 w-24">Code:</dt>
                      <dd class="text-emerald-800 dark:text-emerald-200 font-mono"><%= resolution['code'] %></dd>
                    </div>
                  <% end %>
                </dl>
              </div>
            </div>
          </div>
        <% end %>

        <%# Display error info if present %>
        <% if @simulation.results['_error'].present? %>
          <div class="mb-6 p-4 rounded-lg bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800/30">
            <div class="flex items-start">
              <svg class="w-5 h-5 text-red-600 dark:text-red-400 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <div class="flex-1">
                <h3 class="text-sm font-semibold text-red-900 dark:text-red-200 mb-1">Error</h3>
                <p class="text-sm text-red-800 dark:text-red-300"><%= @simulation.results['_error'] %></p>
              </div>
            </div>
          </div>
        <% end %>

        <%# Display regular results (excluding internal keys starting with _) %>
        <% regular_results = @simulation.results.reject { |k, _| k.to_s.start_with?('_') } %>
        <% if regular_results.any? %>
          <dl class="space-y-2">
            <% regular_results.each do |key, value| %>
              <div class="flex">
                <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 w-1/3"><%= key %>:</dt>
                <dd class="text-sm text-gray-900 dark:text-gray-100"><%= value.is_a?(Hash) ? value.to_json : value %></dd>
              </div>
            <% end %>
          </dl>
        <% elsif @simulation.results.keys.all? { |k| k.to_s.start_with?('_') } %>
          <%# All results are internal, don't show "No results" message %>
        <% end %>
      </div>
    <% else %>
      <div class="p-12 text-center">
        <p class="text-gray-500 dark:text-gray-400">No results recorded.</p>
      </div>
    <% end %>
  </div>

  <div class="mt-6 flex justify-end">
    <%= link_to workflow_path(@workflow), class: "bg-slate-600 hover:bg-slate-700 text-white px-6 py-2 rounded-lg text-sm font-medium shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105" do %>
      Back to Workflow
    <% end %>
  </div>
</div>

