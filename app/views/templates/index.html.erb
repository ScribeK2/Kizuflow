<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header Section -->
  <div class="mb-8 animate-fade-in">
    <h1 class="text-4xl md:text-5xl font-bold tracking-tight bg-gradient-to-r from-blue-600 via-purple-600 to-blue-600 bg-clip-text text-transparent dark:from-blue-400 dark:via-purple-400 dark:to-blue-400">
      Templates
    </h1>
    <p class="mt-4 text-lg text-gray-600 dark:text-gray-400">
      Browse and use pre-built workflow templates.
    </p>
  </div>

  <!-- Search Section -->
  <div class="mb-6 glass-card p-4 animate-fade-in-up">
    <%= form_with url: templates_path, method: :get, local: true, class: "flex gap-2" do |form| %>
      <%= form.text_field :search, value: params[:search], placeholder: "Search templates...", class: "flex-1 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm py-2 px-3 bg-white/50 dark:bg-gray-800/50 text-gray-900 dark:text-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400 focus:border-blue-500 dark:focus:border-blue-400" %>
      <%= form.submit "Search", class: "bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 text-white px-4 py-2 rounded-lg text-sm font-medium shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105" %>
      <% if params[:search].present? %>
        <%= link_to "Clear", templates_path, class: "bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg text-sm font-medium" %>
      <% end %>
    <% end %>
  </div>

  <% if @templates.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @templates.each_with_index do |template, index| %>
        <div class="glass-card flex flex-col h-full overflow-hidden hover:shadow-xl transition-all duration-300 hover:scale-[1.02] animate-fade-in-up" style="animation-delay: <%= index * 0.05 %>s;">
          <div class="p-6 flex flex-col h-full min-w-0" style="min-height: 300px;">
            <div class="flex items-start justify-between mb-2 gap-2 flex-shrink-0">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 flex-1 min-w-0 break-words line-clamp-2"><%= template.name %></h3>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 whitespace-nowrap flex-shrink-0">
                <%= template.category %>
              </span>
            </div>
            <p class="text-sm text-gray-600 dark:text-gray-300 mb-4 flex-shrink-0 line-clamp-3"><%= truncate(template.description || "", length: 100) %></p>
            
            <div class="text-xs text-gray-500 dark:text-gray-400 mb-4 flex-shrink-0">
              <%= pluralize(template.workflow_data&.length || 0, "step") %>
            </div>
            
            <div class="mt-auto pt-4 border-t border-white/20 dark:border-gray-700/30 flex-shrink-0">
              <div class="grid grid-cols-2 gap-2 mb-2">
                <button type="button" 
                        onclick="openTemplatePreview(<%= template.id %>)"
                        class="bg-white/50 dark:bg-gray-800/50 hover:bg-white/80 dark:hover:bg-gray-800/80 text-gray-700 dark:text-gray-300 px-4 py-2 rounded-lg text-sm font-medium text-center transition-all duration-200 hover:scale-105">
                  Preview
                </button>
                <%= button_to "Use Template", use_template_path(template), method: :post, class: "bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 text-white px-4 py-2 rounded-lg text-sm font-medium shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105" %>
              </div>
              <%= link_to "View Details", template_path(template), class: "block w-full bg-white/30 dark:bg-gray-800/30 hover:bg-white/50 dark:hover:bg-gray-800/50 text-gray-700 dark:text-gray-300 px-4 py-2 rounded-lg text-sm font-medium text-center border border-white/20 dark:border-gray-700/30 transition-all duration-200 hover:scale-105" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="glass-card p-12 text-center animate-fade-in-up">
      <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
      </svg>
      <p class="mt-4 text-gray-500 dark:text-gray-400">No templates found.</p>
    </div>
  <% end %>
</div>

<%# Include preview modals %>
<% if @templates.any? %>
  <%= render partial: "preview_modal", locals: { templates: @templates } %>
<% end %>

