<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header Section -->
  <div class="mb-8 animate-fade-in">
    <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-gray-100 tracking-tight mb-2"><%= @template.name %></h1>
    <p class="mt-2 text-gray-600 dark:text-gray-300"><%= @template.description %></p>
    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 mt-2">
      <%= @template.category %>
    </span>
  </div>

  <%# Flow Preview %>
  <% if @template.workflow_data.present? && @template.workflow_data.any? %>
    <div class="glass-card overflow-hidden mb-6 animate-fade-in-up">
      <div class="px-6 py-5 border-b border-white/20 dark:border-gray-700/30">
        <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100 tracking-tight">Flow Diagram</h2>
      </div>
      <div class="p-6">
        <div class="border border-white/20 dark:border-gray-700/30 rounded-lg bg-gray-50/50 dark:bg-gray-800/30 overflow-auto"
             data-controller="template-flow-preview"
             data-template-flow-preview-compact-value="false"
             id="template-preview-<%= @template.id %>">
          <script type="application/json" data-template-flow-preview-steps-data="<%= @template.id %>">
            <%= @template.workflow_data.to_json.html_safe %>
          </script>
          <div data-template-flow-preview-target="canvas" 
               class="relative overflow-auto"
               style="min-height: 300px; max-height: 600px;">
            <p class="text-gray-500 dark:text-gray-400 text-center py-8">Loading preview...</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="glass-card overflow-hidden mb-6 animate-fade-in-up" style="animation-delay: 0.1s;">
    <div class="px-6 py-5 border-b border-white/20 dark:border-gray-700/30">
      <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100 tracking-tight">Template Steps</h2>
    </div>
    <% if @template.workflow_data.present? && @template.workflow_data.any? %>
      <div class="p-6 space-y-4">
        <% @template.workflow_data.each_with_index do |step, index| %>
          <div class="backdrop-blur-sm bg-white/30 dark:bg-gray-800/30 border border-white/20 dark:border-gray-700/30 rounded-lg p-4 hover:shadow-lg transition-all duration-200 hover:scale-[1.01] animate-fade-in-up" style="animation-delay: <%= index * 0.05 %>s;">
            <div class="flex items-start">
              <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-gradient-to-br from-blue-500 to-purple-600 text-white text-sm font-semibold mr-3 flex-shrink-0">
                <%= index + 1 %>
              </span>
              <div class="flex-1">
                <div class="flex items-center mb-2">
                  <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100"><%= step['title'] %></h3>
                  <span class="ml-3 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300">
                    <%= step['type'] %>
                  </span>
                </div>
                <% if step['description'].present? %>
                  <p class="text-gray-600 dark:text-gray-300"><%= step['description'] %></p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="p-12 text-center">
        <p class="text-gray-500 dark:text-gray-400">No steps defined in this template.</p>
      </div>
    <% end %>
  </div>

  <div class="flex justify-end">
    <%= button_to "Use This Template", use_template_path(@template), method: :post, class: "bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 text-white px-6 py-2 rounded-lg text-sm font-medium shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105" %>
  </div>
</div>

