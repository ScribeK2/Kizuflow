gem "rails", "~> 8.0.0"
gem "redis", "~> 5.0"
gem "sprockets-rails"
gem "sqlite3", ">= 2.1", group: %i[development test]
gem "stimulus-rails"
gem "tailwindcss-rails"
gem "turbo-rails"
